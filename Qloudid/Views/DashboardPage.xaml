<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="Qloudid.Views.DashboardPage"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:d="http://xamarin.com/schemas/2014/forms/design"
	xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="Qloudid"
	ios:Page.UseSafeArea="True"
	BackgroundColor="{StaticResource AppBg}"
	NavigationPage.HasNavigationBar="False"
	mc:Ignorable="d">
	<ContentPage.Content>
		<ScrollView VerticalScrollBarVisibility="Never">
			<StackLayout Padding="20" Spacing="50">
				<Image
					Aspect="AspectFit"
					HeightRequest="150"
					HorizontalOptions="CenterAndExpand"
					Source="appLogo.png"
					VerticalOptions="CenterAndExpand"
					WidthRequest="150" />

				<Label
					FontFamily="{StaticResource SFProSemiboldFontFamily}"
					FontSize="25"
					HorizontalOptions="CenterAndExpand"
					TextColor="White"
					VerticalOptions="CenterAndExpand">
					<Label.FormattedText>
						<FormattedString>
							<Span Text="Welcome : " />
							<Span Text="{Binding UserInfo.DisplayUserName}" />
						</FormattedString>
					</Label.FormattedText>
				</Label>

				<Grid
					Margin="0,0,0,40"
					HeightRequest="150"
					HorizontalOptions="CenterAndExpand"
					VerticalOptions="EndAndExpand"
					WidthRequest="150">
					<Button
						BackgroundColor="Transparent"
						BorderColor="#E133D0"
						BorderWidth="1"
						Clicked="OnLoginToDesktopClicked"
						CornerRadius="75"
						HeightRequest="150"
						WidthRequest="150" />

					<Button
						Padding="0"
						BackgroundColor="Transparent"
						BorderColor="#62A4FC"
						BorderWidth="1"
						Clicked="OnLoginToDesktopClicked"
						CornerRadius="50"
						FontFamily="{StaticResource SFProSemiboldFontFamily}"
						HeightRequest="100"
						HorizontalOptions="CenterAndExpand"
						Text="SCAN QR"
						TextColor="White"
						VerticalOptions="CenterAndExpand"
						WidthRequest="100" />
				</Grid>
			</StackLayout>
		</ScrollView>
	</ContentPage.Content>
</ContentPage>