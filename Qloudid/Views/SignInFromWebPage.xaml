<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="Qloudid.Views.SignInFromWebPage"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:d="http://xamarin.com/schemas/2014/forms/design"
	xmlns:fontawesome="clr-namespace:Qloudid.Helper"
	xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	ios:Page.UseSafeArea="True"
	BackgroundColor="#3623B7"
	NavigationPage.HasNavigationBar="False"
	mc:Ignorable="d">
	<Grid Padding="10" RowSpacing="20">
		<Grid.RowDefinitions>
			<RowDefinition Height="50" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<ImageButton
			Grid.Row="0"
			Padding="10"
			BackgroundColor="Transparent"
			Command="{Binding CancelVerifyPasswordCommand}"
			HorizontalOptions="StartAndExpand"
			WidthRequest="80">
			<ImageButton.Source>
				<FontImageSource
					FontFamily="{StaticResource MaterialFontFamily}"
					Glyph="{x:Static fontawesome:QloudidAppFlatIcons.ArrowLeft}"
					Size="80"
					Color="#fff" />
			</ImageButton.Source>
		</ImageButton>

		<ScrollView
			Grid.Row="1"
			VerticalOptions="FillAndExpand"
			VerticalScrollBarVisibility="Never">
			<StackLayout Spacing="20">
				<StackLayout HeightRequest="100" VerticalOptions="StartAndExpand">
					<ImageButton
						Padding="10"
						BackgroundColor="Transparent"
						BorderColor="#05CBE7"
						BorderWidth="1"
						CornerRadius="15"
						HeightRequest="50"
						HorizontalOptions="Center"
						IsVisible="{Binding IsAppLogo}"
						VerticalOptions="StartAndExpand"
						WidthRequest="50">
						<ImageButton.Source>
							<FontImageSource
								FontFamily="{StaticResource MaterialFontFamily}"
								Glyph="{x:Static fontawesome:QloudidAppFlatIcons.CheckboxMarkedCircleOutline}"
								Size="50"
								Color="#05CBE7" />
						</ImageButton.Source>
					</ImageButton>

					<ImageButton
						Aspect="AspectFit"
						BackgroundColor="Transparent"
						CornerRadius="15"
						HeightRequest="50"
						HorizontalOptions="Center"
						IsVisible="{Binding IsUserImage}"
						Source="{Binding UserImage}"
						VerticalOptions="StartAndExpand"
						WidthRequest="50" />

					<Label
						FontFamily="{StaticResource SFProRegularFontFamily}"
						FontSize="20"
						HorizontalTextAlignment="Center"
						Text="Enter Passcode"
						TextColor="White"
						VerticalOptions="EndAndExpand"
						VerticalTextAlignment="End" />
				</StackLayout>

				<StackLayout
					Grid.Row="0"
					HorizontalOptions="CenterAndExpand"
					Orientation="Horizontal"
					Spacing="13"
					VerticalOptions="CenterAndExpand">
					<Grid>
						<BoxView
							x:Name="BoxView1"
							BackgroundColor="{Binding Password1Bg}"
							CornerRadius="7"
							HeightRequest="14"
							HorizontalOptions="Center"
							VerticalOptions="Center"
							WidthRequest="14" />

						<Label
							FontFamily="{StaticResource SFProSemiboldFontFamily}"
							FontSize="1"
							HorizontalTextAlignment="Center"
							Text="{Binding Password1}"
							TextColor="Transparent"
							VerticalTextAlignment="Center" />
					</Grid>

					<Grid>
						<BoxView
							x:Name="BoxView2"
							BackgroundColor="{Binding Password2Bg}"
							CornerRadius="7"
							HeightRequest="14"
							HorizontalOptions="Center"
							VerticalOptions="Center"
							WidthRequest="14" />

						<Label
							FontFamily="{StaticResource SFProSemiboldFontFamily}"
							FontSize="1"
							HorizontalTextAlignment="Center"
							Text="{Binding Password2}"
							TextColor="Transparent"
							VerticalTextAlignment="Center" />
					</Grid>

					<Grid>
						<BoxView
							x:Name="BoxView3"
							BackgroundColor="{Binding Password3Bg}"
							CornerRadius="7"
							HeightRequest="14"
							HorizontalOptions="Center"
							VerticalOptions="Center"
							WidthRequest="14" />

						<Label
							FontFamily="{StaticResource SFProSemiboldFontFamily}"
							FontSize="1"
							HorizontalTextAlignment="Center"
							Text="{Binding Password3}"
							TextColor="Transparent"
							VerticalTextAlignment="Center" />
					</Grid>

					<Grid>
						<BoxView
							x:Name="BoxView4"
							BackgroundColor="{Binding Password4Bg}"
							CornerRadius="7"
							HeightRequest="14"
							HorizontalOptions="Center"
							VerticalOptions="Center"
							WidthRequest="14" />

						<Label
							FontFamily="{StaticResource SFProSemiboldFontFamily}"
							FontSize="1"
							HorizontalTextAlignment="Center"
							Text="{Binding Password4}"
							TextColor="Transparent"
							VerticalTextAlignment="Center" />
					</Grid>

					<Grid>
						<BoxView
							x:Name="BoxView5"
							BackgroundColor="{Binding Password5Bg}"
							CornerRadius="7"
							HeightRequest="14"
							HorizontalOptions="Center"
							VerticalOptions="Center"
							WidthRequest="14" />

