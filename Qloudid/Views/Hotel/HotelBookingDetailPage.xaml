<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="Qloudid.Views.Hotel.HotelBookingDetailPage"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:controls="clr-namespace:Qloudid.Controls"
	xmlns:fontawesome="clr-namespace:Qloudid.Helper"
	xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
	ios:Page.UseSafeArea="True"
	BackgroundColor="White"
	NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <ScrollView VerticalScrollBarVisibility="Never">
            <Grid BackgroundColor="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="84" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="200" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Image
					Grid.Row="0"
					Grid.ColumnSpan="3"
					Aspect="Fill"
					IsVisible="False"
					Source="iconCurveTopGray.png" />

                <ImageButton
					Grid.Row="0"
					Grid.Column="0"
					Padding="20,12,20,10"
					BackgroundColor="Transparent"
					Command="{Binding ClearLoginCommand}"
					HorizontalOptions="StartAndExpand"
					VerticalOptions="StartAndExpand">
                    <ImageButton.Source>
                        <FontImageSource
							FontFamily="{StaticResource MaterialFontFamily}"
							Glyph="{x:Static fontawesome:QloudidAppFlatIcons.ArrowLeft}"
							Size="25"
							Color="Black" />
                    </ImageButton.Source>
                </ImageButton>

                <Label
					Grid.Row="0"
					Grid.Column="1"
					Margin="0,15,0,0"
					BackgroundColor="Transparent"
					FontFamily="SFProRegularFontFamily"
					FontSize="17"
					HorizontalTextAlignment="Center"
					Text="Qloud ID"
					TextColor="Black"
					VerticalTextAlignment="Start" />

                <ImageButton
					Grid.Row="0"
					Grid.Column="2"
					Padding="10,12,20,10"
					BackgroundColor="Transparent"
					HorizontalOptions="EndAndExpand"
					VerticalOptions="StartAndExpand">
                    <ImageButton.Source>
                        <FontImageSource
							FontFamily="{StaticResource MaterialFontFamily}"
							Glyph="{x:Static fontawesome:QloudidAppFlatIcons.Help}"
							Size="25"
							Color="Black" />
                    </ImageButton.Source>
                </ImageButton>

                <Frame VerticalOptions="CenterAndExpand" 
					Grid.Row="1" Padding="25"
					Grid.ColumnSpan="3"
					Margin="30,0,30,0"
					CornerRadius="20"
					HasShadow="False">
                    <Frame.Background>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.8,1">
                            <LinearGradientBrush.GradientStops>
                                <GradientStop Offset="0" Color="#F19969" />
                                <GradientStop Offset="1" Color="#DA4E38" />
                            </LinearGradientBrush.GradientStops>
                        </LinearGradientBrush>
                    </Frame.Background>
                    <Grid ColumnSpacing="0" RowSpacing="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50" />
                            <RowDefinition Height="220" />
                            <RowDefinition Height="130" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="40" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Label
							Grid.Row="0"
							Grid.Column="0"
							FontFamily="{StaticResource MaterialFontFamily}"
							FontSize="50"
							HorizontalTextAlignment="Start"
							Opacity="0.5"
							Text="{x:Static fontawesome:QloudidAppFlatIcons.Apple}"
							TextColor="White"
							VerticalOptions="Start"
							VerticalTextAlignment="Center" />

                        <Label
							Grid.Row="0"
							Grid.Column="1"
							FontFamily="SFProRegularFontFamily"
							FontSize="18"
							HorizontalTextAlignment="End"
							Opacity="0.5"
							Text="{Binding CurrentDate}"
							TextColor="White"
							VerticalOptions="CenterAndExpand"
							VerticalTextAlignment="Center" />

                        <StackLayout
							Grid.Row="1"
							Grid.ColumnSpan="2"
							HorizontalOptions="CenterAndExpand"
							Spacing="10"
							VerticalOptions="CenterAndExpand">
                            <ImageButton
								Grid.Column="0"
								Padding="25"
								BackgroundColor="#3623B7"
								BorderColor="#05CBE7"
								BorderWidth="1"
								CornerRadius="60"
								HeightRequest="120"
								WidthRequest="120">
                                <ImageButton.Source>
                                    <FontImageSource
										FontFamily="{StaticResource MaterialFontFamily}"
										Glyph="{x:Static fontawesome:QloudidAppFlatIcons.CheckboxMarkedCircleOutline}"
										Size="50"
										Color="#05CBE7" />
                                </ImageButton.Source>
                            </ImageButton>

                            <Label
								FontFamily="SFProRegularFontFamily"
								FontSize="24"
								HorizontalTextAlignment="Center"
								Opacity="0.5"
								Text="Qloud ID"
								TextColor="White"
								VerticalOptions="Start" />
                        </StackLayout>

                        <Label
							Grid.Row="2"
							Grid.ColumnSpan="2"
							FontFamily="SFProRegularFontFamily"
							FontSize="40"
							HorizontalOptions="CenterAndExpand"
							TextColor="White"
							VerticalOptions="CenterAndExpand">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="$ " />
                                    <Span Text="{Binding BookingDetail.Price}" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                        <Label
							Grid.Row="3"
							Grid.Column="0"
							FontFamily="SFProRegularFontFamily"
							FontSize="15"
							HorizontalOptions="Start"
							Opacity="0.5"
							Text="Qloud ID pay"
							TextColor="White"
							VerticalOptions="CenterAndExpand" />

                        <Label
							Grid.Row="3"
							Grid.Column="1"
							FontFamily="SFProRegularFontFamily"
							FontSize="15"
							HorizontalOptions="End"
							Opacity="0.5"
							Text="User name"
							TextColor="White"
							VerticalOptions="CenterAndExpand" />

                        <Label
							Grid.Row="4"
							Grid.Column="0"
							FontFamily="SFProRegularFontFamily"
							FontSize="20"
							HorizontalOptions="Start"
							Text="SEK"
							TextColor="White"
							VerticalOptions="Start" />

                        <Label
							Grid.Row="4"
							Grid.Column="1"
							FontFamily="SFProRegularFontFamily"
							FontSize="20"
							HorizontalOptions="End"
							Text="{Binding DisplayName}"
							TextColor="White"
							VerticalOptions="Start" />
                    </Grid>
                </Frame>

				<Label Margin="20,0,0,0"
							Grid.Row="2"
							Grid.Column="0"
							FontFamily="SFProRegularFontFamily"
							FontSize="20"
							HorizontalOptions="Center"
							Text="Pay with"
							TextColor="LightGray"
							VerticalOptions="Center" />

                <ImageButton
					Command="{Binding ContinueCommand}"
					Padding="15" BackgroundColor="Transparent"
					Grid.Row="2"
					HorizontalOptions="CenterAndExpand"
					Grid.Column="1"
					VerticalOptions="CenterAndExpand">
                    <ImageButton.Source>
                        <FontImageSource
							FontFamily="{StaticResource MaterialFontFamily}"
							Glyph="{x:Static fontawesome:QloudidAppFlatIcons.Fingerprint}"
							Size="200"
							Color="LightGray" />
                    </ImageButton.Source>
                </ImageButton>

				<Label Margin="0,0,20,0"
							Grid.Row="2"
							Grid.Column="2"
							FontFamily="SFProRegularFontFamily"
							FontSize="20"
							HorizontalOptions="Center"
							Text="fingertip"
							TextColor="LightGray"
							VerticalOptions="Center" />

                <!--<controls:CustomButton
					Grid.Row="2"
					Grid.ColumnSpan="3"
					Margin="20,0,20,0"
					BackgroundColor="#05CBE7"
					Command="{Binding ContinueCommand}"
					FontFamily="SFProSemiboldFontFamily"
					FontSize="16"
					Text="Pay For Hotel"
					VerticalOptions="CenterAndExpand" />-->
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>

