<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="Qloudid.Views.IdentificatorPage"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:controls="clr-namespace:Qloudid.Controls"
	xmlns:d="http://xamarin.com/schemas/2014/forms/design"
	xmlns:fontawesome="clr-namespace:Qloudid.Helper"
	xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:textinputlayout="clr-namespace:Syncfusion.XForms.TextInputLayout;assembly=Syncfusion.Core.XForms"
	xmlns:usercontrols="clr-namespace:Qloudid.UserControls"
	ios:Page.UseSafeArea="True"
	BackgroundColor="#181A1F"
	NavigationPage.HasNavigationBar="False"
	mc:Ignorable="d">
	<Grid
		Margin="0,32,0,0"
		ColumnSpacing="0"
		RowSpacing="0">
		<Grid.RowDefinitions>
			<RowDefinition Height="48" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="28" />
			<ColumnDefinition Width="48" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<usercontrols:BackButtonControl Grid.Row="0" Grid.Column="1" />

		<usercontrols:SkipButtonControl
			Grid.Row="0"
			Grid.Column="2"
			Margin="0,0,28,0"
			HorizontalOptions="EndAndExpand" />

		<ScrollView
			Grid.Row="1"
			Grid.ColumnSpan="3"
			VerticalScrollBarVisibility="Never">
			<StackLayout
				Margin="28,32,28,0"
				Spacing="0"
				VerticalOptions="StartAndExpand">
				<Label
					FontFamily="{StaticResource PoppinsBoldFontFamily}"
					FontSize="32"
					Text="Verify yourself"
					TextColor="White" />

				<Label
					Margin="0,12,0,22"
					FontFamily="{StaticResource PoppinsRegularFontFamily}"
					FontSize="18"
					LineHeight="1.1"
					Text="We need you to identify yourself with a legit identification 👋"
					TextColor="White" />

				<Grid RowSpacing="20">
					<Grid.RowDefinitions>
						<RowDefinition Height="56" />
						<RowDefinition Height="27" />
						<RowDefinition Height="22" />
						<RowDefinition Height="80" />
						<RowDefinition Height="80" />
					</Grid.RowDefinitions>
					<textinputlayout:SfTextInputLayout
						Grid.Row="0"
						ContainerBackgroundColor="Transparent"
						ContainerType="Outlined"
						FocusedColor="#797A7D"
						FocusedStrokeWidth="0.5"
						HeightRequest="56"
						Hint="Country"
						LeadingViewPosition="Inside"
						OutlineCornerRadius="12"
						TrailingViewPosition="Inside"
						UnfocusedColor="#797A7D"
						UnfocusedStrokeWidth="0.5">
						<textinputlayout:SfTextInputLayout.LeadingView>
							<Label
								FontFamily="{StaticResource MaterialFontFamily}"
								FontSize="20"
								HorizontalTextAlignment="Center"
								Text="{x:Static fontawesome:QloudidAppFlatIcons.Country}"
								TextColor="#797A7D"
								VerticalTextAlignment="Center" />
						</textinputlayout:SfTextInputLayout.LeadingView>
						<controls:CustomFloatingLabelEntry
							BackgroundColor="#F8F8FB"
							FontFamily="{StaticResource PoppinsRegularFontFamily}"
							FontSize="16"
							IsReadOnly="True"
							Placeholder="Country"
							PlaceholderColor="#797A7D"
							Text="{Binding CountryName}"
							TextColor="White" />
					</textinputlayout:SfTextInputLayout>

					<Label
						Grid.Row="2"
						FontFamily="{StaticResource PoppinsSemiBoldFontFamily}"
						FontSize="16"
						Text="Select ID type"
						TextColor="White"
						VerticalTextAlignment="Start" />

					<Frame
						Grid.Row="3"
						Padding="15"
						BackgroundColor="Transparent"
						BorderColor="#797A7D"
						CornerRadius="12"
						IsClippedToBounds="True">
						<Frame.GestureRecognizers>
							<TapGestureRecognizer Command="{Binding SelectedIdentificatorCommand}" CommandParameter="IdNumber" />
						</Frame.GestureRecognizers>
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="50" />
							</Grid.ColumnDefinitions>
							<StackLayout
								Grid.Column="0"
								Spacing="0"
								VerticalOptions="CenterAndExpand">
								<Label
									x:Name="lblStateAndNationalID"
									FontFamily="{StaticResource PoppinsRegularFontFamily}"
									FontSize="16"
									TextColor="White"
									VerticalTextAlignment="Start" />

								<Label
									FontFamily="{StaticResource PoppinsRegularFontFamily}"
									FontSize="14"
									Opacity="0.4"
									Text="Will only work in your country"
									TextColor="White"
									VerticalTextAlignment="Start" />
							</StackLayout>
							<BoxView
								Grid.Column="1"
								BackgroundColor="#223426"
								CornerRadius="25"
								HeightRequest="50"
								HorizontalOptions="CenterAndExpand"
								VerticalOptions="CenterAndExpand"
								WidthRequest="50" />

							<Label
								Grid.Column="1"
								FontFamily="{StaticResource MaterialFontFamily}"
								FontSize="22"
								HorizontalTextAlignment="Center"
								Text="{x:Static fontawesome:QloudidAppFlatIcons.ChevronRight}"
								TextColor="#4FD471"
								VerticalTextAlignment="Center" />
						</Grid>
					</Frame>

					<Frame
						Grid.Row="4"
						Padding="15"
						BackgroundColor="Transparent"
						BorderColor="#797A7D"
						CornerRadius="12"
						IsClippedToBounds="True">
						<Frame.GestureRecognizers>
							<TapGestureRecognizer Command="{Binding SelectedIdentificatorCommand}" CommandParameter="PassportNumber" />
						</Frame.GestureRecognizers>
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="50" />
							</Grid.ColumnDefinitions>
							<StackLayout
								Grid.Column="0"
								Spacing="0"
								VerticalOptions="CenterAndExpand">
								<Label
									FontFamily="{StaticResource PoppinsRegularFontFamily}"
									FontSize="16"
									Text="Passport"
									TextColor="White"
									VerticalTextAlignment="Start" />

								<Label
									FontFamily="{StaticResource PoppinsRegularFontFamily}"
									FontSize="14"
									Opacity="0.4"
									Text="Works in all countries"
									TextColor="White"
									VerticalTextAlignment="Start" />
							</StackLayout>
							<BoxView
								Grid.Column="1"
								BackgroundColor="#223426"
								CornerRadius="25"
								HeightRequest="50"
								HorizontalOptions="CenterAndExpand"
								VerticalOptions="CenterAndExpand"
								WidthRequest="50" />

							<Label
								Grid.Column="1"
								FontFamily="{StaticResource MaterialFontFamily}"
								FontSize="22"
								HorizontalTextAlignment="Center"
								Text="{x:Static fontawesome:QloudidAppFlatIcons.ChevronRight}"
								TextColor="#4FD471"
								VerticalTextAlignment="Center" />
						</Grid>
					</Frame>
				</Grid>
			</StackLayout>
		</ScrollView>
	</Grid>





