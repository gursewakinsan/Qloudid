<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="Qloudid.Views.AccountNotAvailablePage"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:controls="clr-namespace:Qloudid.Controls"
	xmlns:d="http://xamarin.com/schemas/2014/forms/design"
	xmlns:fontawesome="clr-namespace:Qloudid.Helper"
	xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:usercontrols="clr-namespace:Qloudid.UserControls"
	ios:Page.UseSafeArea="True"
	BackgroundColor="{StaticResource AppBg}"
	NavigationPage.HasNavigationBar="False"
	mc:Ignorable="d">
	<ContentPage.Content>
		<ScrollView VerticalScrollBarVisibility="Never">
			<StackLayout
				Padding="30"
				HorizontalOptions="CenterAndExpand"
				Spacing="0"
				VerticalOptions="CenterAndExpand">

				<Frame
					Padding="10"
					BackgroundColor="#05CBE7"
					BorderColor="#05CBE7"
					CornerRadius="25"
					HasShadow="False"
					HeightRequest="50"
					HorizontalOptions="Center"
					VerticalOptions="Center"
					WidthRequest="50">
					<Label
						FontFamily="{StaticResource MaterialFontFamily}"
						FontSize="30"
						HorizontalTextAlignment="Center"
						Text="{x:Static fontawesome:QloudidAppFlatIcons.Close}"
						TextColor="White"
						VerticalTextAlignment="Center" />
				</Frame>

				<Label
					Margin="0,30,0,10"
					FontFamily="{StaticResource SFProSemiboldFontFamily}"
					FontSize="24"
					HorizontalOptions="CenterAndExpand"
					Text="Account Not Available"
					TextColor="White" />

				<Label
					FontFamily="{StaticResource SFProRegularFontFamily}"
					FontSize="18"
					HorizontalOptions="CenterAndExpand"
					HorizontalTextAlignment="Center"
					Opacity="0.7"
					Text="Given email does not exist with any account. Do you want to.."
					TextColor="White" />

				<usercontrols:DotLineControl />

				<controls:CustomButton
					x:Name="btnRestore"
					Clicked="OnBtnRestoreClicked"
					Command="{Binding SubmitRestoreEmailCommand}"
					FontFamily="{StaticResource SFProRegularFontFamily}"
					Text="Restore" />

				<controls:CustomButton
					x:Name="btnCreateAccount"
					Margin="40,30,40,0"
					BorderColor="Transparent"
					Clicked="OnBtnCreateAccountClicked"
					FontFamily="{StaticResource SFProRegularFontFamily}"
					Text="Create Account" />
			</StackLayout>
		</ScrollView>
	</ContentPage.Content>
</ContentPage>