						Grid.Column="1"
						FontFamily="PoppinsRegularFontFamily"
						FontSize="14"
						HorizontalTextAlignment="End"
						Text="3 nights"
						TextColor="White"
						VerticalTextAlignment="Center" />

					<BoxView
						Grid.Row="3"
						Grid.ColumnSpan="2"
						BackgroundColor="#2A2A31" />

					<Label
						Grid.Row="4"
						Grid.Column="0"
						FontFamily="PoppinsRegularFontFamily"
						FontSize="14"
						HorizontalTextAlignment="Start"
						Opacity="0.42"
						Text="Guests"
						TextColor="White"
						VerticalTextAlignment="Center" />

					<Label
						Grid.Row="4"
						Grid.Column="1"
						FontFamily="PoppinsRegularFontFamily"
						FontSize="14"
						HorizontalTextAlignment="End"
						Text="2 adults &amp; 1 child"
						TextColor="White"
						VerticalTextAlignment="Center" />

					<BoxView
						Grid.Row="5"
						Grid.ColumnSpan="2"
						BackgroundColor="#2A2A31" />

					<Label
						Grid.Row="6"
						Grid.Column="0"
						FontFamily="PoppinsRegularFontFamily"
						FontSize="14"
						HorizontalTextAlignment="Start"
						Opacity="0.42"
						Text="Dates"
						TextColor="White"
						VerticalTextAlignment="Center" />

					<Label
						Grid.Row="6"
						Grid.Column="1"
						FontFamily="PoppinsRegularFontFamily"
						FontSize="14"
						HorizontalTextAlignment="End"
						Text="22-25 May, 2022"
						TextColor="White"
						VerticalTextAlignment="Center" />

					<BoxView
						Grid.Row="7"
						Grid.ColumnSpan="2"
						BackgroundColor="#2A2A31" />
				</Grid>
			</Grid>
		</ScrollView>

		<Frame
			Grid.Row="2"
			Grid.Column="1"
			Grid.ColumnSpan="2"
			Padding="0"
			BackgroundColor="#4285F4"
			CornerRadius="12"
			HasShadow="False"
			IsClippedToBounds="True">
			<Frame.GestureRecognizers>
				<TapGestureRecognizer Command="{Binding ContinueCommand}" />
			</Frame.GestureRecognizers>
			<StackLayout
				HorizontalOptions="CenterAndExpand"
				Orientation="Horizontal"
				Spacing="8"
				VerticalOptions="CenterAndExpand">
				<StackLayout.GestureRecognizers>
					<TapGestureRecognizer Command="{Binding ContinueCommand}" />
				</StackLayout.GestureRecognizers>
				<Label
					FontFamily="PoppinsSemiBoldFontFamily"
					FontSize="16"
					HorizontalTextAlignment="Center"
					Text="Signature"
					TextColor="White"
					VerticalTextAlignment="Center">
					<Label.GestureRecognizers>
						<TapGestureRecognizer Command="{Binding ContinueCommand}" />
					</Label.GestureRecognizers>
				</Label>

				<Label
					FontFamily="{StaticResource MaterialFontFamily}"
					FontSize="20"
					HorizontalTextAlignment="Center"
					Text="{x:Static fontawesome:QloudidAppFlatIcons.ArrowRight}"
					TextColor="White"
					VerticalTextAlignment="Center">
					<Label.GestureRecognizers>
						<TapGestureRecognizer Command="{Binding ContinueCommand}" />
					</Label.GestureRecognizers>
				</Label>
			</StackLayout>
		</Frame>
	</Grid>



