						TextColor="White"
						VerticalTextAlignment="Center" />

					<Label
						Grid.Row="0"
						Grid.Column="1"
						FontFamily="PoppinsRegularFontFamily"
						FontSize="14"
						HorizontalTextAlignment="End"
						Text="{Binding VerifyUserConsent.company_name}"
						TextColor="White"
						VerticalTextAlignment="Center" />

					<BoxView
						Grid.Row="1"
						Grid.ColumnSpan="2"
						BackgroundColor="#2A2A31" />

					<Label
						Grid.Row="2"
						Grid.Column="0"
						FontFamily="PoppinsRegularFontFamily"
						FontSize="14"
						HorizontalTextAlignment="Start"
						Opacity="0.42"
						Text="Nights"
						TextColor="White"
						VerticalTextAlignment="Center" />

					<Label
