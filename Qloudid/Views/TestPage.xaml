<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="Qloudid.Views.TestPage"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:controls="clr-namespace:Qloudid.Controls"
	xmlns:fontawesome="clr-namespace:Qloudid.Helper"
	xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
	xmlns:models="clr-namespace:Qloudid.Models"
	ios:Page.UseSafeArea="True"
	BackgroundColor="White"
	NavigationPage.HasNavigationBar="False">
	<ContentPage.Content>
		<ScrollView VerticalScrollBarVisibility="Never">
			<StackLayout Padding="30">
				<StackLayout Spacing="0" VerticalOptions="StartAndExpand">
					<Image
						Margin="0,0,0,10"
						Aspect="AspectFit"
						HorizontalOptions="Start"
						Source="logoXXX.png"
						VerticalOptions="Start"
						WidthRequest="40" />

					<Label
						FontFamily="{StaticResource SFProDisplayMediumFontFamily}"
						FontSize="28"
						HorizontalTextAlignment="Start"
						Text="Create a new"
						TextColor="Black"
						VerticalTextAlignment="Start" />

					<Label
						FontFamily="{StaticResource SFProDisplayMediumFontFamily}"
						FontSize="28"
						HorizontalTextAlignment="Start"
						Text="account"
						TextColor="Black"
						VerticalTextAlignment="Start" />

					<BoxView
						Margin="0,10,0,10"
						BackgroundColor="#05CBE7"
						CornerRadius="3"
						HeightRequest="5"
						HorizontalOptions="Start"
						VerticalOptions="Start"
						WidthRequest="40" />
				</StackLayout>

				<Grid RowSpacing="20" VerticalOptions="StartAndExpand">
					<Grid.RowDefinitions>
						<RowDefinition Height="50" />
						<RowDefinition Height="50" />
						<RowDefinition Height="50" />
						<RowDefinition Height="50" />
						<RowDefinition Height="25" />
						<RowDefinition Height="90" />
					</Grid.RowDefinitions>
					<Frame
						Grid.Row="0"
						Padding="0"
						BackgroundColor="#F8F8FB"
						CornerRadius="25"
						HasShadow="False">
						<Grid Margin="15,0,15,0">
							<Grid.ColumnDefinitions>
								<ColumnDefinition />
								<ColumnDefinition Width="20" />
							</Grid.ColumnDefinitions>
							<controls:CustomPicker
								BackgroundColor="#F8F8FB"
								FontFamily="{StaticResource SFProRegularFontFamily}"
								FontSize="16"
								TextColor="#6F7FAF">
								<controls:CustomPicker.ItemsSource>
									<x:Array Type="{x:Type models:Country}">
										<models:Country CountryName="Select country" Id="0" />
										<models:Country CountryName="Afghanistan" Id="2" />
										<models:Country CountryName="Albania" Id="5" />
										<models:Country CountryName="Algeria" Id="62" />
										<models:Country CountryName="American Samoa" Id="11" />
										<models:Country CountryName="Andorra" Id="6" />
										<models:Country CountryName="Angola" Id="3" />
										<models:Country CountryName="Anguilla" Id="4" />
										<models:Country CountryName="Antarctica" Id="12" />
										<models:Country CountryName="Antigua and Barbuda" Id="14" />
										<models:Country CountryName="Argentina" Id="9" />
										<models:Country CountryName="Armenia" Id="10" />
										<models:Country CountryName="Aruba" Id="1" />
										<models:Country CountryName="Australia" Id="15" />
										<models:Country CountryName="Austria" Id="16" />
										<models:Country CountryName="Azerbaijan" Id="17" />
									</x:Array>
								</controls:CustomPicker.ItemsSource>
								<controls:CustomPicker.ItemDisplayBinding>
									<Binding Path="CountryName" />
								</controls:CustomPicker.ItemDisplayBinding>
								<controls:CustomPicker.SelectedIndex>0</controls:CustomPicker.SelectedIndex>
							</controls:CustomPicker>
							<Label
								Grid.Column="1"
								FontSize="16"
								HorizontalTextAlignment="End"
								Text="&#x25bc;"
								TextColor="#6F7FAF"
								VerticalTextAlignment="Center" />
						</Grid>
					</Frame>

					<Frame
						Grid.Row="1"
						Padding="0"
						BackgroundColor="#F8F8FB"
						CornerRadius="25"
						HasShadow="False">
						<controls:CustomEntry
							Margin="15,0,15,0"
							BackgroundColor="#F8F8FB"
							FontFamily="{StaticResource SFProRegularFontFamily}"
							FontSize="16"
							Placeholder="First name"
							PlaceholderColor="#6F7FAF"
							TextColor="#6F7FAF" />
					</Frame>

					<Frame
						Grid.Row="2"
						Padding="0"
						BackgroundColor="#F8F8FB"
						CornerRadius="25"
						HasShadow="False">
						<controls:CustomEntry
							Margin="15,0,15,0"
							BackgroundColor="#F8F8FB"
							FontFamily="{StaticResource SFProRegularFontFamily}"
							FontSize="16"
							Placeholder="Last name"
							PlaceholderColor="#6F7FAF"
							TextColor="#6F7FAF" />
					</Frame>

					<Frame
						Grid.Row="3"
						Padding="0"
						BackgroundColor="#F8F8FB"
						CornerRadius="25"
						HasShadow="False">
						<controls:CustomEntry
							Margin="15,0,15,0"
							BackgroundColor="#F8F8FB"
							FontFamily="{StaticResource SFProRegularFontFamily}"
							FontSize="16"
							Keyboard="Email"
							Placeholder="Email"
							PlaceholderColor="#6F7FAF"
							TextColor="#6F7FAF" />
					</Frame>

					<StackLayout
						Grid.Row="4"
						Margin="10,0,0,0"
						Orientation="Horizontal"
						Spacing="0">
						<ImageButton BackgroundColor="Transparent">
							<ImageButton.Source>
								<FontImageSource
									FontFamily="{StaticResource MaterialFontFamily}"
									Glyph="{x:Static fontawesome:QloudidAppFlatIcons.CheckboxMarked}"
									Size="26"
									Color="#6F7FAF" />
							</ImageButton.Source>
						</ImageButton>

						<Label
							Margin="10,0,0,0"
							FontFamily="{StaticResource SFProRegularFontFamily}"
							FontSize="14"
							HorizontalTextAlignment="Start"
							Text="Please accept our "
							TextColor="#6F7FAF"
							VerticalTextAlignment="Center" />

						<Label
							FontFamily="{StaticResource SFProRegularFontFamily}"
							FontSize="14"
							HorizontalTextAlignment="Start"
							Text="term and conditions"
							TextColor="#3623B7"
							VerticalTextAlignment="Center" />
					</StackLayout>

					<controls:CustomButton
						Grid.Row="5"
						Margin="0"
						BackgroundColor="#05CBE7"
						FontFamily="{StaticResource SFProSemiboldFontFamily}"
						FontSize="16"
						Text="Create Account"
						VerticalOptions="EndAndExpand" />
				</Grid>
			</StackLayout>
		</ScrollView>
	</ContentPage.Content>
</ContentPage>