<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="Qloudid.Views.TestPage"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:controls="clr-namespace:Qloudid.Controls"
	xmlns:fontawesome="clr-namespace:Qloudid.Helper"
	xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
	xmlns:models="clr-namespace:Qloudid.Models"
	ios:Page.UseSafeArea="True"
	BackgroundColor="White"
	NavigationPage.HasNavigationBar="False">
	<ContentPage.Content>
		<Frame
			Margin="20,100,20,100"
			CornerRadius="20"
			HasShadow="False">
			<Frame.Background>
				<LinearGradientBrush StartPoint="0.5,0" EndPoint="0.8,1">
					<LinearGradientBrush.GradientStops>
						<GradientStop Offset="0" Color="#F19969" />
						<GradientStop Offset="1" Color="#DA4E38" />
					</LinearGradientBrush.GradientStops>
				</LinearGradientBrush>
			</Frame.Background>
			<Grid ColumnSpacing="0" RowSpacing="0">
				<Grid.RowDefinitions>
					<RowDefinition Height="50" />
					<RowDefinition />
					<RowDefinition Height="130" />
					<RowDefinition Height="30" />
					<RowDefinition Height="40" />
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition />
					<ColumnDefinition />
				</Grid.ColumnDefinitions>

				<Label
					Grid.Row="0"
					Grid.Column="0"
					FontFamily="{StaticResource MaterialFontFamily}"
					FontSize="50"
					HorizontalTextAlignment="Start"
					Opacity="0.5"
					Text="{x:Static fontawesome:QloudidAppFlatIcons.Apple}"
					TextColor="White"
					VerticalOptions="Start"
					VerticalTextAlignment="Center" />

				<Label
					Grid.Row="0"
					Grid.Column="1"
					FontFamily="{StaticResource SFProRegularFontFamily}"
					FontSize="18"
					HorizontalTextAlignment="End"
					Opacity="0.5"
					Text="2021-05-14"
					TextColor="White"
					VerticalOptions="CenterAndExpand"
					VerticalTextAlignment="Center" />

				<StackLayout
					Grid.Row="1"
					Grid.ColumnSpan="2"
					HorizontalOptions="CenterAndExpand"
					Spacing="10"
					VerticalOptions="CenterAndExpand">
					<ImageButton
						Grid.Column="0"
						Padding="25"
						BackgroundColor="#3623B7"
						BorderColor="#05CBE7"
						BorderWidth="1"
						CornerRadius="60"
						HeightRequest="120"
						WidthRequest="120">
						<ImageButton.Source>
							<FontImageSource
								FontFamily="{StaticResource MaterialFontFamily}"
								Glyph="{x:Static fontawesome:QloudidAppFlatIcons.CheckboxMarkedCircleOutline}"
								Size="50"
								Color="#05CBE7" />
						</ImageButton.Source>
					</ImageButton>

					<Label
						FontFamily="{StaticResource SFProRegularFontFamily}"
						FontSize="24"
						HorizontalTextAlignment="Center"
						Opacity="0.5"
						Text="Qloud ID"
						TextColor="White"
						VerticalOptions="Start" />
				</StackLayout>

				<Label
					Grid.Row="2"
					Grid.ColumnSpan="2"
					FontFamily="{StaticResource SFProRegularFontFamily}"
					FontSize="40"
					HorizontalOptions="CenterAndExpand"
					Text="$ 300"
					TextColor="White"
					VerticalOptions="CenterAndExpand" />

				<Label
					Grid.Row="3"
					Grid.Column="0"
					FontFamily="{StaticResource SFProRegularFontFamily}"
					FontSize="15"
					HorizontalOptions="Start"
					Opacity="0.5"
					Text="Qloud ID pay"
					TextColor="White"
					VerticalOptions="CenterAndExpand" />

				<Label
					Grid.Row="3"
					Grid.Column="1"
					FontFamily="{StaticResource SFProRegularFontFamily}"
					FontSize="15"
					HorizontalOptions="End"
					Opacity="0.5"
					Text="User name"
					TextColor="White"
					VerticalOptions="CenterAndExpand" />

				<Label
					Grid.Row="4"
					Grid.Column="0"
					FontFamily="{StaticResource SFProRegularFontFamily}"
					FontSize="20"
					HorizontalOptions="Start"
					Text="SEK"
					TextColor="White"
					VerticalOptions="Start" />

				<Label
					Grid.Row="4"
					Grid.Column="1"
					FontFamily="{StaticResource SFProRegularFontFamily}"
					FontSize="20"
					HorizontalOptions="End"
					Text="Gursewak Singh"
					TextColor="White"
					VerticalOptions="Start" />
			</Grid>
		</Frame>
	</ContentPage.Content>
</ContentPage>