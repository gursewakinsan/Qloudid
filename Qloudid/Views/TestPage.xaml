<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="Qloudid.Views.TestPage"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:fontawesome="clr-namespace:Qloudid.Helper"
	xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
	ios:Page.UseSafeArea="True"
	BackgroundColor="White">
	<ContentPage.Content>
		<StackLayout>
			<StackLayout
				HorizontalOptions="CenterAndExpand"
				Orientation="Horizontal"
				Spacing="5"
				VerticalOptions="CenterAndExpand">
				<Grid>
					<BoxView
						x:Name="BoxView1"
						BackgroundColor="{Binding Password1Bg}"
						CornerRadius="20"
						HeightRequest="50"
						HorizontalOptions="Center"
						VerticalOptions="Center"
						WidthRequest="50" />

					<Label
						FontFamily="{StaticResource SFProSemiboldFontFamily}"
						FontSize="20"
						HorizontalTextAlignment="Center"
						Text="{Binding Password1}"
						TextColor="Black"
						VerticalTextAlignment="Center" />
				</Grid>

				<Grid>
					<BoxView
						x:Name="BoxView2"
						BackgroundColor="{Binding Password2Bg}"
						CornerRadius="20"
						HeightRequest="50"
						HorizontalOptions="Center"
						VerticalOptions="Center"
						WidthRequest="50" />

					<Label
						FontFamily="{StaticResource SFProSemiboldFontFamily}"
						FontSize="20"
						HorizontalTextAlignment="Center"
						Text="{Binding Password2}"
						TextColor="Black"
						VerticalTextAlignment="Center" />
				</Grid>

				<Grid>
					<BoxView
						x:Name="BoxView3"
						BackgroundColor="{Binding Password3Bg}"
						CornerRadius="20"
						HeightRequest="50"
						HorizontalOptions="Center"
						VerticalOptions="Center"
						WidthRequest="50" />

					<Label
						FontFamily="{StaticResource SFProSemiboldFontFamily}"
						FontSize="20"
						HorizontalTextAlignment="Center"
						Text="{Binding Password3}"
						TextColor="Black"
						VerticalTextAlignment="Center" />
				</Grid>

				<Grid>
					<BoxView
						x:Name="BoxView4"
						BackgroundColor="{Binding Password4Bg}"
						CornerRadius="20"
						HeightRequest="50"
						HorizontalOptions="Center"
						VerticalOptions="Center"
						WidthRequest="50" />

					<Label
						FontFamily="{StaticResource SFProSemiboldFontFamily}"
						FontSize="20"
						HorizontalTextAlignment="Center"
						Text="{Binding Password4}"
						TextColor="Black"
						VerticalTextAlignment="Center" />
				</Grid>

				<Grid>
					<BoxView
						x:Name="BoxView5"
						BackgroundColor="{Binding Password5Bg}"
						CornerRadius="20"
						HeightRequest="50"
						HorizontalOptions="Center"
						VerticalOptions="Center"
						WidthRequest="50" />

					<Label
						FontFamily="{StaticResource SFProSemiboldFontFamily}"
						FontSize="20"
						HorizontalTextAlignment="Center"
						Text="{Binding Password5}"
						TextColor="Black"
						VerticalTextAlignment="Center" />
				</Grid>

				<Grid>
					<BoxView
						x:Name="BoxView6"
						BackgroundColor="{Binding Password6Bg}"
						CornerRadius="20"
						HeightRequest="50"
						HorizontalOptions="Center"
						VerticalOptions="Center"
						WidthRequest="50" />

					<Label
						FontFamily="{StaticResource SFProSemiboldFontFamily}"
						FontSize="20"
						HorizontalTextAlignment="Center"
						Text="{Binding Password6}"
						TextColor="Black"
						VerticalTextAlignment="Center" />
				</Grid>
			</StackLayout>

			<Grid
				Margin="0,0,0,30"
				ColumnSpacing="0"
				RowSpacing="51"
				VerticalOptions="EndAndExpand">
				<Label
					Grid.Row="0"
					FontFamily="{StaticResource SFProSemiboldFontFamily}"
					FontSize="20"
					HorizontalTextAlignment="Center"
					Text="1"
					TextColor="Black"
					VerticalTextAlignment="Center">
					<Label.GestureRecognizers>
						<TapGestureRecognizer Command="{Binding KeyboardNumericClickedCommand}" CommandParameter="1" />
					</Label.GestureRecognizers>
				</Label>

				<Label
					Grid.Row="0"
					Grid.Column="1"
					FontFamily="{StaticResource SFProSemiboldFontFamily}"
					FontSize="20"
					HorizontalTextAlignment="Center"
					Text="2"
					TextColor="Black"
					VerticalTextAlignment="Center">
					<Label.GestureRecognizers>
						<TapGestureRecognizer Command="{Binding KeyboardNumericClickedCommand}" CommandParameter="2" />
					</Label.GestureRecognizers>
				</Label>

				<Label
					Grid.Row="0"
					Grid.Column="2"
					FontFamily="{StaticResource SFProSemiboldFontFamily}"
					FontSize="20"
					HorizontalTextAlignment="Center"
					Text="3"
					TextColor="Black"
					VerticalTextAlignment="Center">
					<Label.GestureRecognizers>
						<TapGestureRecognizer Command="{Binding KeyboardNumericClickedCommand}" CommandParameter="3" />
					</Label.GestureRecognizers>
				</Label>

				<Label
					Grid.Row="1"
					Grid.Column="0"
					FontFamily="{StaticResource SFProSemiboldFontFamily}"
					FontSize="20"
					HorizontalTextAlignment="Center"
					Text="4"
					TextColor="Black"
					VerticalTextAlignment="Center">
					<Label.GestureRecognizers>
						<TapGestureRecognizer Command="{Binding KeyboardNumericClickedCommand}" CommandParameter="4" />
					</Label.GestureRecognizers>
				</Label>

				<Label
					Grid.Row="1"
					Grid.Column="1"
					FontFamily="{StaticResource SFProSemiboldFontFamily}"
					FontSize="20"
					HorizontalTextAlignment="Center"
					Text="5"
					TextColor="Black"
					VerticalTextAlignment="Center">
					<Label.GestureRecognizers>
						<TapGestureRecognizer Command="{Binding KeyboardNumericClickedCommand}" CommandParameter="5" />
					</Label.GestureRecognizers>
				</Label>

				<Label
					Grid.Row="1"
					Grid.Column="2"
					FontFamily="{StaticResource SFProSemiboldFontFamily}"
					FontSize="20"
					HorizontalTextAlignment="Center"
					Text="6"
					TextColor="Black"
					VerticalTextAlignment="Center">
					<Label.GestureRecognizers>
						<TapGestureRecognizer Command="{Binding KeyboardNumericClickedCommand}" CommandParameter="6" />
					</Label.GestureRecognizers>
				</Label>

				<Label
					Grid.Row="2"
					Grid.Column="0"
					FontFamily="{StaticResource SFProSemiboldFontFamily}"
					FontSize="20"
					HorizontalTextAlignment="Center"
					Text="7"
					TextColor="Black"
					VerticalTextAlignment="Center">
					<Label.GestureRecognizers>
						<TapGestureRecognizer Command="{Binding KeyboardNumericClickedCommand}" CommandParameter="7" />
					</Label.GestureRecognizers>
				</Label>

				<Label
					Grid.Row="2"
					Grid.Column="1"
					FontFamily="{StaticResource SFProSemiboldFontFamily}"
					FontSize="20"
					HorizontalTextAlignment="Center"
					Text="8"
					TextColor="Black"
					VerticalTextAlignment="Center">
					<Label.GestureRecognizers>
						<TapGestureRecognizer Command="{Binding KeyboardNumericClickedCommand}" CommandParameter="8" />
					</Label.GestureRecognizers>
				</Label>

				<Label
					Grid.Row="2"
					Grid.Column="2"
					FontFamily="{StaticResource SFProSemiboldFontFamily}"
					FontSize="20"
					HorizontalTextAlignment="Center"
					Text="9"
					TextColor="Black"
					VerticalTextAlignment="Center">
					<Label.GestureRecognizers>
						<TapGestureRecognizer Command="{Binding KeyboardNumericClickedCommand}" CommandParameter="9" />
					</Label.GestureRecognizers>
				</Label>

				<ImageButton
					Grid.Row="3"
					Grid.Column="0"
					Padding="2"
					Aspect="AspectFit"
					BackgroundColor="Transparent"
					Command="{Binding ClearNumericClickedCommand}"
					HeightRequest="24"
					Source="iconCloseOnKeyboard.png"
					VerticalOptions="CenterAndExpand" />

				<Label
					Grid.Row="3"
					Grid.Column="1"
					FontFamily="{StaticResource SFProSemiboldFontFamily}"
					FontSize="20"
					HorizontalTextAlignment="Center"
					Text="0"
					TextColor="Black"
					VerticalTextAlignment="Center">
					<Label.GestureRecognizers>
						<TapGestureRecognizer Command="{Binding KeyboardNumericClickedCommand}" CommandParameter="0" />
					</Label.GestureRecognizers>
				</Label>

				<Label
					Grid.Row="3"
					Grid.Column="2"
					FontFamily="{StaticResource MaterialFontFamily}"
					FontSize="30"
					HeightRequest="24"
					HorizontalTextAlignment="Center"
					Text="{x:Static fontawesome:QloudidAppFlatIcons.Check}"
					TextColor="Black"
					VerticalTextAlignment="Center" />
			</Grid>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>