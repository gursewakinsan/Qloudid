<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="Qloudid.Views.FinalStepToPayPage"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:controls="clr-namespace:Qloudid.Controls"
	xmlns:fontawesome="clr-namespace:Qloudid.Helper"
	xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
	xmlns:textinputlayout="clr-namespace:Syncfusion.XForms.TextInputLayout;assembly=Syncfusion.Core.XForms"
	ios:Page.UseSafeArea="True"
	BackgroundColor="#181A1F"
	NavigationPage.HasNavigationBar="False">
	<ContentPage.Content>
		<Grid
			Margin="0,22,0,5"
			ColumnSpacing="0"
			RowSpacing="0">
			<Grid.RowDefinitions>
				<RowDefinition Height="40" />
				<RowDefinition Height="*" />
				<RowDefinition Height="5" />
				<RowDefinition Height="auto" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="28" />
				<ColumnDefinition Width="40" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="40" />
				<ColumnDefinition Width="28" />
			</Grid.ColumnDefinitions>
			<Frame
				Grid.Row="0"
				Grid.Column="1"
				Padding="0"
				BackgroundColor="Transparent"
				BorderColor="White"
				CornerRadius="8"
				IsClippedToBounds="True"
				Opacity="0.2" />

			<Button
				Grid.Row="0"
				Grid.Column="1"
				Padding="0"
				BackgroundColor="Transparent"
				Command="{Binding BackCommand}"
				FontFamily="{StaticResource MaterialFontFamily}"
				FontSize="25"
				Text="{x:Static fontawesome:QloudidAppFlatIcons.ChevronLeft}"
				TextColor="White" />

			<Image
				Grid.Row="0"
				Grid.Column="3"
				Aspect="AspectFit"
				BackgroundColor="Transparent"
				HeightRequest="40"
				HorizontalOptions="EndAndExpand"
				Source="iconSmallLogo.png"
				VerticalOptions="CenterAndExpand"
				WidthRequest="40" />

			<Grid
				Grid.Row="1"
				Grid.Column="1"
				Grid.ColumnSpan="3"
				Margin="0,31,0,0"
				ColumnSpacing="0"
				RowSpacing="0">
				<Grid.RowDefinitions>
					<RowDefinition Height="48" />
					<RowDefinition Height="8" />
					<RowDefinition Height="26" />
					<RowDefinition Height="8" />
					<RowDefinition Height="1" />
					<RowDefinition Height="41" />
					<RowDefinition Height="36" />
					<RowDefinition Height="0" />
					<RowDefinition Height="*" />
				</Grid.RowDefinitions>

				<Label
					Grid.Row="0"
					FontAttributes="Bold"
					FontFamily="PoppinsBoldFontFamily"
					FontSize="40"
					HorizontalTextAlignment="Start"
					Text="Pay..."
					TextColor="White"
					VerticalTextAlignment="Center" />

				<Label
					Grid.Row="2"
					FontFamily="PoppinsRegularFontFamily"
					FontSize="16"
					HorizontalTextAlignment="Start"
					LineBreakMode="TailTruncation"
					MaxLines="1"
					Text="Select who you wish to pay for it"
					TextColor="White"
					VerticalTextAlignment="Center" />

				<BoxView Grid.Row="4" BackgroundColor="#2A2A31" />

			<controls:CustomButton
					Margin="0"
				Grid.Row="6"
				IsVisible="{Binding IsUserCardOrCompanyCard}"
					BackgroundColor="#4FD471"
					BorderColor="#4FD471"
					CornerRadius="12"
					FontFamily="PoppinsSemiBoldFontFamily"
					FontSize="12" HorizontalOptions="StartAndExpand" 
					Text="Personal"
					TextColor="White"
					WidthRequest="94" />

			<controls:CustomButton
					Margin="0"
				Grid.Row="6"
				IsVisible="{Binding IsUserCardOrCompanyCard, Converter={StaticResource InverseBoolConverter}}"
					BackgroundColor="#4FD471"
					BorderColor="#4FD471"
					CornerRadius="12"
					FontFamily="PoppinsSemiBoldFontFamily"
					FontSize="12" HorizontalOptions="StartAndExpand" 
					Text="Business"
					TextColor="White"
					WidthRequest="94" />

			<ListView
					x:Name="listCards"
					Grid.Row="8"
					BackgroundColor="#181A1F"
					HasUnevenRows="True"
					ItemTapped="OnCardsItemTapped"
					ItemsSource="{Binding CardList}"
					SeparatorVisibility="None"
					VerticalScrollBarVisibility="Never">
					<ListView.ItemTemplate>
						<DataTemplate>
							<ViewCell>
								<Frame
									Margin="0,0,0,20"
									BackgroundColor="#242A37"
									BorderColor="#242A37"
									CornerRadius="8"
									IsClippedToBounds="True">
									<Grid>
										<Grid.ColumnDefinitions>
											<ColumnDefinition Width="*" />
											<ColumnDefinition Width="40" />
										</Grid.ColumnDefinitions>

										<StackLayout
											Grid.Column="0"
											Spacing="1"
											VerticalOptions="CenterAndExpand">
											<StackLayout.GestureRecognizers>
												<TapGestureRecognizer Tapped="OnStackLayoutCardInfoTapped" />
											</StackLayout.GestureRecognizers>
											<Label
												FontFamily="PoppinsRegularFontFamily"
												FontSize="14"
												HorizontalTextAlignment="Start"
												Text="{Binding name_on_card}"
												TextColor="White"
												VerticalTextAlignment="Center">
												<Label.GestureRecognizers>
													<TapGestureRecognizer Tapped="OnLabelCardInfoTapped" />
												</Label.GestureRecognizers>
											</Label>

											<Label
												FontFamily="PoppinsRegularFontFamily"
												FontSize="14"
												HorizontalTextAlignment="Start"
												Text="{Binding card_number2}"
												TextColor="White"
												VerticalTextAlignment="Center">
												<Label.GestureRecognizers>
													<TapGestureRecognizer Tapped="OnLabelCardInfoTapped" />
												</Label.GestureRecognizers>
											</Label>
										</StackLayout>

										<Button
											Grid.Column="1"
											Padding="0"
											BackgroundColor="#466285"
											CornerRadius="20"
											FontFamily="{StaticResource MaterialFontFamily}"
											HeightRequest="40"
											HorizontalOptions="CenterAndExpand"
											Text="{x:Static fontawesome:QloudidAppFlatIcons.Plus}"
											TextColor="White"
											VerticalOptions="CenterAndExpand"
											WidthRequest="40" />
									</Grid>
								</Frame>
							</ViewCell>
						</DataTemplate>
					</ListView.ItemTemplate>
				</ListView>

			</Grid>

			<BoxView
				Grid.Row="3"
				Grid.Column="1"
				Grid.ColumnSpan="3"
				BackgroundColor="#242A37"
				CornerRadius="12"
				HeightRequest="56"
				IsVisible="{Binding IsUserCardOrCompanyCard}">
				<BoxView.GestureRecognizers>
					<TapGestureRecognizer Command="{Binding AddNewCardForPayingCommand}" />
				</BoxView.GestureRecognizers>
			</BoxView>

			<Frame
				Grid.Row="3"
				Grid.Column="1"
				Grid.ColumnSpan="3"
				Margin="2"
				Padding="0"
				BackgroundColor="#181A1F"
				CornerRadius="12"
				HasShadow="False"
				HeightRequest="56"
				IsClippedToBounds="True"
				IsVisible="{Binding IsUserCardOrCompanyCard}">
				<Frame.GestureRecognizers>
					<TapGestureRecognizer Command="{Binding AddNewCardForPayingCommand}" />
				</Frame.GestureRecognizers>
				<StackLayout
					Grid.Row="9"
					HorizontalOptions="CenterAndExpand"
					Orientation="Horizontal"
					Spacing="8"
					VerticalOptions="CenterAndExpand">
					<StackLayout.GestureRecognizers>
						<TapGestureRecognizer Command="{Binding AddNewCardForPayingCommand}" />
					</StackLayout.GestureRecognizers>
					<Label
						FontFamily="PoppinsSemiBoldFontFamily"
						FontSize="16"
						HorizontalTextAlignment="Center"
						Text="Add card"
						TextColor="White"
						VerticalTextAlignment="Center">
						<Label.GestureRecognizers>
							<TapGestureRecognizer Command="{Binding AddNewCardForPayingCommand}" />
						</Label.GestureRecognizers>
					</Label>

					<Label
						FontFamily="{StaticResource MaterialFontFamily}"
						FontSize="20"
						HorizontalTextAlignment="Center"
						Text="{x:Static fontawesome:QloudidAppFlatIcons.ArrowRight}"
						TextColor="White"
						VerticalTextAlignment="Center">
						<Label.GestureRecognizers>
							<TapGestureRecognizer Command="{Binding AddNewCardForPayingCommand}" />
						</Label.GestureRecognizers>
					</Label>
				</StackLayout>
			</Frame>
		</Grid>


