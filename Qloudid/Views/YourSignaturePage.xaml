										<Span Text=" " />
										<Span Text="{Binding DeliveryAddress.PortNumber}" />
									</FormattedString>
								</Label.FormattedText>
							</Label>

							<Label
								FontFamily="PoppinsRegularFontFamily"
								FontSize="14"
								HorizontalTextAlignment="Start"
								LineBreakMode="TailTruncation"
								MaxLines="1"
								TextColor="White">
								<Label.FormattedText>
