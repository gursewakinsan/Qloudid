<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="Qloudid.Views.YourSignaturePage"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:controls="clr-namespace:Qloudid.Controls"
	xmlns:fontawesome="clr-namespace:Qloudid.Helper"
	xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
	ios:Page.UseSafeArea="True"
	BackgroundColor="White"
	NavigationPage.HasNavigationBar="False">
	<ContentPage.Content>
		<Grid Padding="20" RowSpacing="20">
			<Grid.RowDefinitions>
				<RowDefinition Height="auto" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>
			<StackLayout
				Grid.Row="0"
				Spacing="0"
				VerticalOptions="Start">
				<Grid
					Margin="0,0,0,10"
					HeightRequest="50"
					VerticalOptions="Start">
					<ImageButton
						Grid.Column="0"
						Padding="9"
						BackgroundColor="#3623B7"
						BorderColor="#05CBE7"
						BorderWidth="1"
						CornerRadius="20"
						HeightRequest="50"
						HorizontalOptions="Start"
						VerticalOptions="Center"
						WidthRequest="50">
						<ImageButton.Source>
							<FontImageSource
								FontFamily="{StaticResource MaterialFontFamily}"
								Glyph="{x:Static fontawesome:QloudidAppFlatIcons.CheckboxMarkedCircleOutline}"
								Size="50"
								Color="#05CBE7" />
						</ImageButton.Source>
					</ImageButton>

					<ImageButton
						Grid.Column="1"
						Padding="15,15,0,15"
						BackgroundColor="Transparent"
						Command="{Binding CloseCommand}"
						HorizontalOptions="EndAndExpand"
						IsVisible="False"
						WidthRequest="50">
						<ImageButton.Source>
							<FontImageSource
								FontFamily="{StaticResource MaterialFontFamily}"
								Glyph="{x:Static fontawesome:QloudidAppFlatIcons.Close}"
								Size="40"
								Color="#6F7FAF" />
						</ImageButton.Source>
					</ImageButton>
				</Grid>

				<Label
					FontFamily="{StaticResource SFProDisplayMediumFontFamily}"
					FontSize="28"
					HorizontalTextAlignment="Start"
					Text="Your"
					TextColor="Black"
					VerticalTextAlignment="Start" />

				<Label
					FontFamily="{StaticResource SFProDisplayMediumFontFamily}"
					FontSize="28"
					HorizontalTextAlignment="Start"
					Text="Signature"
					TextColor="Black"
					VerticalTextAlignment="Start" />

				<BoxView
					Margin="0,10,0,0"
					BackgroundColor="#05CBE7"
					CornerRadius="3"
					HeightRequest="5"
					HorizontalOptions="Start"
					VerticalOptions="Start"
					WidthRequest="40" />
			</StackLayout>

			<ScrollView Grid.Row="1" VerticalScrollBarVisibility="Never">
				<StackLayout Spacing="0">
					<Label
						FontFamily="{StaticResource SFProSemiboldFontFamily}"
						FontSize="16"
						HorizontalTextAlignment="Start"
						Text="To pay"
						TextColor="Black"
						VerticalTextAlignment="Start" />

					<Label
						CharacterSpacing="3"
						FontFamily="{StaticResource SFProSemiboldFontFamily}"
						FontSize="25"
						HorizontalTextAlignment="Start"
						Text="7350 SEK"
						TextColor="Black"
						VerticalTextAlignment="Start" />

					<BoxView
						Margin="0,0,0,20"
						BackgroundColor="#707070"
						HeightRequest="1" />

					<Label
						Margin="0,20,0,2"
						FontFamily="{StaticResource SFProSemiboldFontFamily}"
						FontSize="16"
						HorizontalTextAlignment="Start"
						Text="Delivery address"
						TextColor="Gray"
						VerticalTextAlignment="Start" />

					<Label
						FontFamily="{StaticResource SFProRegularFontFamily}"
						FontSize="16"
						HorizontalTextAlignment="Start"
						Text="{Binding DeliveryAddress.NameOnHouse}"
						TextColor="Black"
						VerticalTextAlignment="Start" />

					<Label
						FontFamily="{StaticResource SFProRegularFontFamily}"
						FontSize="16"
						HorizontalTextAlignment="Start"
						TextColor="Black"
						VerticalTextAlignment="Start">
						<Label.FormattedText>
							<FormattedString>
								<Span Text="{Binding DeliveryAddress.Address}" />
								<Span Text=" " />
								<Span Text="{Binding DeliveryAddress.PortNumber}" />
							</FormattedString>
						</Label.FormattedText>
					</Label>

					<Label
						FontFamily="{StaticResource SFProRegularFontFamily}"
						FontSize="16"
						HorizontalTextAlignment="Start"
						TextColor="Black"
						VerticalTextAlignment="Start">
						<Label.FormattedText>
							<FormattedString>
								<Span Text="{Binding DeliveryAddress.City}" />
								<Span Text=" " />
								<Span Text="{Binding DeliveryAddress.Zipcode}" />
								<Span Text=", " />
								<Span Text="{Binding DeliveryAddress.CountryName}" />
							</FormattedString>
						</Label.FormattedText>
					</Label>

					<Label
						Margin="0,20,0,0"
						CharacterSpacing="1"
						FontFamily="{StaticResource SFProRegularFontFamily}"
						FontSize="16"
						HeightRequest="40"
						Text="Edit"
						TextColor="#05CBE7">
						<Label.GestureRecognizers>
							<TapGestureRecognizer Command="{Binding EditDeliveryAddressCommand}" />
						</Label.GestureRecognizers>
					</Label>

					<BoxView
						BackgroundColor="#707070"
						HeightRequest="1"
						Opacity="0.2" />

					<Label
						Margin="0,20,0,2"
						FontFamily="{StaticResource SFProSemiboldFontFamily}"
						FontSize="16"
						HorizontalTextAlignment="Start"
						Text="Invoice address"
						TextColor="Gray"
						VerticalTextAlignment="Start" />

					<Label
						FontFamily="{StaticResource SFProRegularFontFamily}"
						FontSize="16"
						HorizontalTextAlignment="Start"
						Text="{Binding InvoiceAddress.NameOnHouse}"
						TextColor="Black"
						VerticalTextAlignment="Start" />

					<Label
						FontFamily="{StaticResource SFProRegularFontFamily}"
						FontSize="16"
						HorizontalTextAlignment="Start"
						TextColor="Black"
						VerticalTextAlignment="Start">
						<Label.FormattedText>
							<FormattedString>
								<Span Text="{Binding InvoiceAddress.InvoiceAddress}" />
								<Span Text=" " />
								<Span Text="{Binding InvoiceAddress.InvoicePortNumber}" />
							</FormattedString>
						</Label.FormattedText>
					</Label>

					<Label
						FontFamily="{StaticResource SFProRegularFontFamily}"
						FontSize="16"
						HorizontalTextAlignment="Start"
						TextColor="Black"
						VerticalTextAlignment="Start">
						<Label.FormattedText>
							<FormattedString>
								<Span Text="{Binding InvoiceAddress.InvoiceCity}" />
								<Span Text=" " />
								<Span Text="{Binding InvoiceAddress.InvoiceZip}" />
								<Span Text=", " />
								<Span Text="{Binding InvoiceAddress.InvoiceCountry}" />
							</FormattedString>
						</Label.FormattedText>
					</Label>

					<Label
						Margin="0,20,0,0"
						CharacterSpacing="1"
						FontFamily="{StaticResource SFProRegularFontFamily}"
						FontSize="16"
						HeightRequest="40"
						Text="Edit"
						TextColor="#05CBE7">
						<Label.GestureRecognizers>
							<TapGestureRecognizer Command="{Binding EditInvoicingAddressCommand}" />
						</Label.GestureRecognizers>
					</Label>

					<BoxView
						BackgroundColor="#707070"
						HeightRequest="1"
						Opacity="0.2" />

					<Label
						Margin="0,20,0,2"
						FontFamily="{StaticResource SFProSemiboldFontFamily}"
						FontSize="16"
						HorizontalTextAlignment="Start"
						Text="Payment"
						TextColor="Gray"
						VerticalTextAlignment="Start" />

					<Label
						FontFamily="{StaticResource SFProRegularFontFamily}"
						FontSize="16"
						HorizontalTextAlignment="Start"
						TextColor="Black"
						VerticalTextAlignment="Start">
						<Label.FormattedText>
							<FormattedString>
								<Span Text="Card" />
								<Span Text="    " />
								<Span Text="{Binding CardDetail.card_number2}" />
							</FormattedString>
						</Label.FormattedText>
					</Label>

					<Label
						FontFamily="{StaticResource SFProRegularFontFamily}"
						FontSize="16"
						HorizontalTextAlignment="Start"
						TextColor="Black"
						VerticalTextAlignment="Start">
						<Label.FormattedText>
							<FormattedString>
								<Span Text="Type" />
								<Span Text="    " />
								<Span Text="{Binding CardDetail.card_type}" />
							</FormattedString>
						</Label.FormattedText>
					</Label>

					<Label
						Margin="0,20,0,0"
						CharacterSpacing="1"
						FontFamily="{StaticResource SFProRegularFontFamily}"
						FontSize="16"
						HeightRequest="40"
						Text="Edit"
						TextColor="#05CBE7">
						<Label.GestureRecognizers>
							<TapGestureRecognizer Command="{Binding EditCardDetailCommand}" />
						</Label.GestureRecognizers>
					</Label>

					<BoxView
						BackgroundColor="#707070"
						HeightRequest="1"
						Opacity="0.2" />

					<controls:CustomButton
						Margin="0,50,0,10"
						BackgroundColor="#05CBE7"
						Command="{Binding ConfirmAndSignCommand}"
						FontFamily="{StaticResource SFProSemiboldFontFamily}"
						FontSize="16"
						Text="Confirm and sign" />

					<StackLayout HeightRequest="50">
						<StackLayout.GestureRecognizers>
							<TapGestureRecognizer Command="{Binding CancelConfirmAndSignCommand}" />
						</StackLayout.GestureRecognizers>
						<Label
							FontFamily="{StaticResource SFProSemiboldFontFamily}"
							FontSize="16"
							HorizontalOptions="CenterAndExpand"
							Text="Cancel"
							TextColor="#5587C3"
							TextDecorations="Underline"
							VerticalOptions="CenterAndExpand" />
					</StackLayout>
				</StackLayout>
			</ScrollView>
		</Grid>
	</ContentPage.Content>
</ContentPage>