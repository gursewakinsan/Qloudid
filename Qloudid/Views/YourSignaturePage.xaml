					HorizontalTextAlignment="Center"
					Text="{x:Static fontawesome:QloudidAppFlatIcons.ArrowRight}"
					TextColor="White"
					VerticalTextAlignment="Center">
					<Label.GestureRecognizers>
						<TapGestureRecognizer Command="{Binding ConfirmAndSignCommand}" />
					</Label.GestureRecognizers>
				</Label>
			</StackLayout>
		</Frame>
	</Grid>


