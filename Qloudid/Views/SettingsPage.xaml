<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="Qloudid.Views.SettingsPage"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:fontawesome="clr-namespace:Qloudid.Helper"
	xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
	ios:Page.UseSafeArea="True"
	BackgroundColor="#F3F4F6"
	NavigationPage.HasNavigationBar="False">
	<ContentPage.Content>
		<Grid RowSpacing="20" BackgroundColor="White">
			<Grid.RowDefinitions>
				<RowDefinition Height="70" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
				<ColumnDefinition />
				<ColumnDefinition />
			</Grid.ColumnDefinitions>
		

		<Image
				Grid.Row="0"
				Grid.ColumnSpan="3"
				Aspect="Fill"
				Source="iconCurveTopGray.png" />

			<ImageButton
				Grid.Row="0" 
				Grid.Column="0" Padding="20,0,35,35"
				BackgroundColor="Transparent"
				Command="{Binding CloseCommand}"
				HorizontalOptions="StartAndExpand"
				VerticalOptions="CenterAndExpand">
				<ImageButton.Source>
					<FontImageSource
						FontFamily="{StaticResource MaterialFontFamily}"
						Glyph="{x:Static fontawesome:QloudidAppFlatIcons.ArrowLeft}"
						Size="50"
						Color="Black" />
				</ImageButton.Source>
			</ImageButton>

			<Label
				Grid.Row="0"
				Grid.Column="1"
				FontFamily="{StaticResource SFProRegularFontFamily}"
				FontSize="17"
				HorizontalTextAlignment="Center"
				Text="Settings"
				TextColor="Black" Padding="0,0,0,35"
				VerticalTextAlignment="Center" />

			<ImageButton
				Grid.Row="0" 
				Grid.Column="2" Padding="35,0,20,35"
				BackgroundColor="Transparent"
				HorizontalOptions="EndAndExpand"
				VerticalOptions="CenterAndExpand">
				<ImageButton.Source>
					<FontImageSource
						FontFamily="{StaticResource MaterialFontFamily}"
						Glyph="{x:Static fontawesome:QloudidAppFlatIcons.Help}"
						Size="50"
						Color="Black" />
				</ImageButton.Source>
			</ImageButton>

				<!--<Label
				Grid.Row="0"
				Grid.Column="1"
				Margin="0,10,0,0"
				FontFamily="{StaticResource SFProRegularFontFamily}"
				FontSize="20"
				HorizontalTextAlignment="Center"
				Text="Settings"
				TextColor="White"
				VerticalTextAlignment="Center" />

			<ImageButton
				Grid.Row="0"
				Grid.Column="2"
				Margin="0,10,0,0"
				Padding="45,45,10,45"
				BackgroundColor="Transparent"
				HorizontalOptions="EndAndExpand"
				VerticalOptions="CenterAndExpand">
				<ImageButton.Source>
					<FontImageSource
						FontFamily="{StaticResource MaterialFontFamily}"
						Glyph="{x:Static fontawesome:QloudidAppFlatIcons.Help}"
						Size="80"
						Color="White" />
				</ImageButton.Source>
			</ImageButton>-->

			<Grid BackgroundColor="White" 
				Grid.Row="1"
				Grid.ColumnSpan="3"
				Padding="20,0,20,0"
				RowSpacing="0">
				<Grid.RowDefinitions>
					<RowDefinition Height="80" />
					<RowDefinition Height="1" />
					<RowDefinition Height="80" />
					<RowDefinition Height="1" />
					<RowDefinition Height="80" />
					<RowDefinition Height="1" />
					<RowDefinition Height="80" />
					<RowDefinition Height="1" />
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition />
					<ColumnDefinition Width="50" />
				</Grid.ColumnDefinitions>
				<Label
					Grid.Row="0"
					FontFamily="{StaticResource SFProSemiboldFontFamily}"
					FontSize="16"
					HorizontalTextAlignment="Start"
					LineBreakMode="TailTruncation"
					MaxLines="1"
					Text="Activate certificate"
					TextColor="Black"
					VerticalTextAlignment="Center" />

				<ImageButton
					Grid.Row="0"
					Grid.Column="1"
					Padding="7"
					BackgroundColor="Transparent"
					CornerRadius="20"
					HeightRequest="40"
					HorizontalOptions="End"
					Opacity="0.5"
					VerticalOptions="Center"
					WidthRequest="40">
					<ImageButton.Source>
						<FontImageSource
							FontFamily="{StaticResource MaterialFontFamily}"
							Glyph="{x:Static fontawesome:QloudidAppFlatIcons.ChevronRight}"
							Size="100"
							Color="#6F7FAF" />
					</ImageButton.Source>
				</ImageButton>

				<BoxView
					Grid.Row="1"
					Grid.ColumnSpan="2"
					BackgroundColor="#6F7FAF"
					Opacity="0.2" />

				<Label
					Grid.Row="2"
					FontFamily="{StaticResource SFProSemiboldFontFamily}"
					FontSize="16"
					HorizontalTextAlignment="Start"
					LineBreakMode="TailTruncation"
					MaxLines="1"
					Text="Languages"
					TextColor="Black"
					VerticalTextAlignment="Center" />

				<ImageButton
					Grid.Row="2"
					Grid.Column="1"
					Padding="7"
					BackgroundColor="Transparent"
					CornerRadius="20"
					HeightRequest="40"
					HorizontalOptions="End"
					Opacity="0.5"
					VerticalOptions="Center"
					WidthRequest="40">
					<ImageButton.Source>
						<FontImageSource
							FontFamily="{StaticResource MaterialFontFamily}"
							Glyph="{x:Static fontawesome:QloudidAppFlatIcons.ChevronRight}"
							Size="100"
							Color="#6F7FAF" />
					</ImageButton.Source>
				</ImageButton>

				<BoxView
					Grid.Row="3"
					Grid.ColumnSpan="2"
					BackgroundColor="#6F7FAF"
					Opacity="0.2" />

				<Label
					Grid.Row="4"
					FontFamily="{StaticResource SFProSemiboldFontFamily}"
					FontSize="16"
					HorizontalTextAlignment="Start"
					LineBreakMode="TailTruncation"
					MaxLines="1"
					Text="{Binding UserInfo.DisplayUserName}"
					TextColor="Black"
					VerticalTextAlignment="Center" />

				<ImageButton
					Grid.Row="4"
					Grid.Column="1"
					Padding="7"
					BackgroundColor="#E6F7FE"
					Command="{Binding GetCertificateDetailCommand}"
					CornerRadius="20"
					HeightRequest="40"
					HorizontalOptions="End"
					VerticalOptions="Center"
					WidthRequest="40">
					<ImageButton.Source>
						<FontImageSource
							FontFamily="{StaticResource MaterialFontFamily}"
							Glyph="{x:Static fontawesome:QloudidAppFlatIcons.ChevronRight}"
							Size="100"
							Color="#3DB9EC" />
					</ImageButton.Source>
				</ImageButton>

				<BoxView
					Grid.Row="5"
					Grid.ColumnSpan="2"
					BackgroundColor="#6F7FAF"
					Opacity="0.2" />

				<Label
					Grid.Row="6"
					FontFamily="{StaticResource SFProSemiboldFontFamily}"
					FontSize="16"
					HorizontalTextAlignment="Start"
					LineBreakMode="TailTruncation"
					MaxLines="1"
					Text="Manage Cards"
					TextColor="Black"
					VerticalTextAlignment="Center" />

				<ImageButton
					Grid.Row="6"
					Grid.Column="1"
					Padding="6"
					BackgroundColor="Transparent"
					Command="{Binding ManageCardCommand}"
					CornerRadius="20"
					HeightRequest="40"
					HorizontalOptions="End"
					Opacity="0.5"
					VerticalOptions="Center"
					WidthRequest="40">
					<ImageButton.Source>
						<FontImageSource
							FontFamily="{StaticResource MaterialFontFamily}"
							Glyph="{x:Static fontawesome:QloudidAppFlatIcons.ChevronRight}"
							Size="100"
							Color="#6F7FAF" />
					</ImageButton.Source>
				</ImageButton>

				<BoxView
					Grid.Row="7"
					Grid.ColumnSpan="2"
					BackgroundColor="#6F7FAF"
					Opacity="0.2" />
			</Grid>
		</Grid>
	</ContentPage.Content>
</ContentPage>