									HorizontalTextAlignment="Center"
									Text="{x:Static fontawesome:QloudidAppFlatIcons.City}"
									TextColor="#797A7D"
									VerticalTextAlignment="Center" />
							</textinputlayout:SfTextInputLayout.LeadingView>
							<controls:CustomFloatingLabelEntry
								BackgroundColor="#F8F8FB"
								FontFamily="{StaticResource PoppinsRegularFontFamily}"
								FontSize="16"
								Placeholder="Invoice city"
								PlaceholderColor="#797A7D"
								Text="{Binding InvoiceCity}"
								TextColor="White" />
						</textinputlayout:SfTextInputLayout>
					</Grid>

					<textinputlayout:SfTextInputLayout
						Grid.Row="6"
						Grid.ColumnSpan="2"
						ContainerBackgroundColor="Transparent"
						ContainerType="Outlined"
						FocusedColor="#EF3B17"
						FocusedStrokeWidth="0.5"
						HeightRequest="56"
						Hint="Entry code"
						LeadingViewPosition="Inside"
						OutlineCornerRadius="12"
						TrailingViewPosition="Inside"
						UnfocusedColor="#797A7D"
						UnfocusedStrokeWidth="0.5">
						<textinputlayout:SfTextInputLayout.LeadingView>
							<Label
								FontFamily="{StaticResource MaterialFontFamily}"
								FontSize="20"
								HorizontalTextAlignment="Center"
								Text="{x:Static fontawesome:QloudidAppFlatIcons.FormTextboxPassword}"
								TextColor="#797A7D"
								VerticalTextAlignment="Center" />
						</textinputlayout:SfTextInputLayout.LeadingView>
						<controls:CustomFloatingLabelEntry
							BackgroundColor="#F8F8FB"
							FontFamily="{StaticResource PoppinsRegularFontFamily}"
							FontSize="16"
							Placeholder="Entry code"
							PlaceholderColor="#797A7D"
							Text="{Binding EntryCode}"
							TextColor="White" />
					</textinputlayout:SfTextInputLayout>

					<controls:CustomButton
						Grid.Row="7"
						Grid.ColumnSpan="2"
						Margin="0"
						BackgroundColor="#6263ED"
						BorderColor="#6263ED"
						Command="{Binding AddAddressCommand}"
						CornerRadius="12"
						FontFamily="{StaticResource PoppinsSemiBoldFontFamily}"
						FontSize="16"
						HeightRequest="56"
						Text="Add Address"
						TextColor="White"
						VerticalOptions="EndAndExpand" />
				</Grid>
			</StackLayout>
		</ScrollView>
	</Grid>


