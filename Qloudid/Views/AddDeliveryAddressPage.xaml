<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="Qloudid.Views.AddDeliveryAddressPage"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:controls="clr-namespace:Qloudid.Controls"
	xmlns:fontawesome="clr-namespace:Qloudid.Helper"
	xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
	xmlns:textinputlayout="clr-namespace:Syncfusion.XForms.TextInputLayout;assembly=Syncfusion.Core.XForms"
	xmlns:usercontrols="clr-namespace:Qloudid.UserControls"
	ios:Page.UseSafeArea="True"
	BackgroundColor="#181A1F"
	NavigationPage.HasNavigationBar="False">
	<Grid
		Margin="0,22,0,0"
		ColumnSpacing="0"
		RowSpacing="0">
		<Grid.RowDefinitions>
			<RowDefinition Height="40" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="28" />
			<ColumnDefinition Width="40" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="40" />
			<ColumnDefinition Width="28" />
		</Grid.ColumnDefinitions>
		<usercontrols:BackButtonControl Grid.Row="0" Grid.Column="1" />

		<Image
			Grid.Row="0"
			Grid.Column="3"
			Aspect="AspectFit"
			BackgroundColor="Transparent"
			HeightRequest="40"
			HorizontalOptions="EndAndExpand"
			Source="iconSmallLogo.png"
			VerticalOptions="CenterAndExpand"
			WidthRequest="40" />

		<ScrollView
			Grid.Row="1"
			Grid.Column="1"
			Grid.ColumnSpan="3"
			Margin="0,31,0,0"
			VerticalScrollBarVisibility="Never">
			<StackLayout Spacing="0" VerticalOptions="StartAndExpand">
				<Label
					FontAttributes="Bold"
					FontFamily="PoppinsBoldFontFamily"
					FontSize="40"
					Text="Address"
					TextColor="White" />

				<Label
					Margin="0,0,0,50"
					FontFamily="PoppinsRegularFontFamily"
					FontSize="16"
					LineBreakMode="TailTruncation"
					MaxLines="2"
					Opacity="0.7"
					Text="For a smooth shopping, secured deliveries &amp; express check-in "
					TextColor="White" />

				<Grid ColumnSpacing="13" RowSpacing="0">
					<Grid.RowDefinitions>
						<RowDefinition Height="56" />
						<RowDefinition Height="24" />
						<RowDefinition Height="56" />
						<RowDefinition Height="24" />
						<RowDefinition Height="56" />
						<RowDefinition Height="80" />
						<RowDefinition Height="24" />
						<RowDefinition Height="9" />
						<RowDefinition Height="1" />
						<RowDefinition Height="20" />
						<RowDefinition Height="52" />
						<RowDefinition Height="auto" />
						<RowDefinition Height="20" />
						<RowDefinition Height="1" />

						<RowDefinition Height="20" />
						<RowDefinition Height="52" />
						<RowDefinition Height="auto" />
						<RowDefinition Height="20" />
						<RowDefinition Height="1" />
						<RowDefinition Height="20" />
						<RowDefinition Height="52" />
						<RowDefinition Height="auto" />
						<RowDefinition Height="20" />
						<RowDefinition Height="1" />
						<RowDefinition Height="62" />
						<RowDefinition Height="56" />
						<RowDefinition Height="5" />
					</Grid.RowDefinitions>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="69" />
					</Grid.ColumnDefinitions>
					<textinputlayout:SfTextInputLayout
						Grid.Row="0"
						Grid.Column="0"
						ContainerBackgroundColor="Transparent"
						ContainerType="Outlined"
						FocusedColor="#6263ED"
						FocusedStrokeWidth="0.5"
						HeightRequest="56"
						Hint="Street address"
						LeadingViewPosition="Inside"
						OutlineCornerRadius="12"
						TrailingViewPosition="Inside"
						UnfocusedColor="#797A7D"
						UnfocusedStrokeWidth="0.5">
						<controls:CustomFloatingLabelEntry
							BackgroundColor="#F8F8FB"
							FontFamily="PoppinsRegularFontFamily"
							FontSize="16"
							Placeholder="Street address"
							PlaceholderColor="#797A7D"
							Text="{Binding DeliveryAddress}"
							TextColor="White" />
					</textinputlayout:SfTextInputLayout>

					<textinputlayout:SfTextInputLayout
						Grid.Row="0"
						Grid.Column="1"
						ContainerBackgroundColor="Transparent"
						ContainerType="Outlined"
						FocusedColor="#6263ED"
						FocusedStrokeWidth="0.5"
						HeightRequest="56"
						Hint="No"
						LeadingViewPosition="Inside"
						OutlineCornerRadius="12"
						TrailingViewPosition="Inside"
						UnfocusedColor="#797A7D"
						UnfocusedStrokeWidth="0.5">
						<controls:CustomFloatingLabelEntry
							BackgroundColor="#F8F8FB"
							FontFamily="PoppinsRegularFontFamily"
							FontSize="16"
							Placeholder="No"
							PlaceholderColor="#797A7D"
							Text="{Binding DeliveryPortNumber}"
							TextColor="White" />
					</textinputlayout:SfTextInputLayout>

					<textinputlayout:SfTextInputLayout
						Grid.Row="2"
						Grid.ColumnSpan="2"
						ContainerBackgroundColor="Transparent"
						ContainerType="Outlined"
						FocusedColor="#6263ED"
						FocusedStrokeWidth="0.5"
						HeightRequest="56"
						Hint="Zip code"
						LeadingViewPosition="Inside"
						OutlineCornerRadius="12"
						TrailingViewPosition="Inside"
						UnfocusedColor="#797A7D"
						UnfocusedStrokeWidth="0.5">
						<textinputlayout:SfTextInputLayout.LeadingView>
							<Label
								FontFamily="{StaticResource MaterialFontFamily}"
								FontSize="20"
								HorizontalTextAlignment="Center"
								Text="{x:Static fontawesome:QloudidAppFlatIcons.PostOutline}"
								TextColor="#797A7D"
								VerticalTextAlignment="Center" />
						</textinputlayout:SfTextInputLayout.LeadingView>
						<controls:CustomFloatingLabelEntry
							BackgroundColor="#F8F8FB"
							FontFamily="PoppinsRegularFontFamily"
							FontSize="16"
							Placeholder="Zip code"
							PlaceholderColor="#797A7D"
							Text="{Binding DeliveryZipCode}"
							TextColor="White" />
					</textinputlayout:SfTextInputLayout>

					<textinputlayout:SfTextInputLayout
						Grid.Row="4"
						Grid.ColumnSpan="2"
						ContainerBackgroundColor="Transparent"
						ContainerType="Outlined"
						FocusedColor="#6263ED"
						FocusedStrokeWidth="0.5"
						HeightRequest="56"
						Hint="City"
						LeadingViewPosition="Inside"
						OutlineCornerRadius="12"
						TrailingViewPosition="Inside"
						UnfocusedColor="#797A7D"
						UnfocusedStrokeWidth="0.5">
						<textinputlayout:SfTextInputLayout.LeadingView>
							<Label
								FontFamily="{StaticResource MaterialFontFamily}"
								FontSize="20"
								HorizontalTextAlignment="Center"
								Text="{x:Static fontawesome:QloudidAppFlatIcons.City}"
								TextColor="#797A7D"
								VerticalTextAlignment="Center" />
						</textinputlayout:SfTextInputLayout.LeadingView>
						<controls:CustomFloatingLabelEntry
							BackgroundColor="#F8F8FB"
							FontFamily="PoppinsRegularFontFamily"
							FontSize="16"
							Placeholder="City"
							PlaceholderColor="#797A7D"
							Text="{Binding DeliveryCity}"
							TextColor="White" />
					</textinputlayout:SfTextInputLayout>

					<Label
						Grid.Row="6"
						Grid.ColumnSpan="2"
						FontFamily="PoppinsSemiBoldFontFamily"
						FontSize="20"
						HorizontalTextAlignment="Start"
						Text="SECURE YOUR DELIVERIES"
						TextColor="White" />

					<BoxView
						Grid.Row="8"
						Grid.ColumnSpan="2"
						BackgroundColor="White"
						Opacity="0.10" />

					<StackLayout
						Grid.Row="10"
						Grid.Column="0"
						Spacing="5"
						VerticalOptions="CenterAndExpand">
						<Label
							FontFamily="PoppinsRegularFontFamily"
							FontSize="16"
							HorizontalTextAlignment="Start"
							Opacity="0.7"
							Text="Is your name"
							TextColor="White" />

						<Label
							FontFamily="PoppinsRegularFontFamily"
							FontSize="16"
							HorizontalTextAlignment="Start"
							Opacity="0.7"
							Text="on the door?"
							TextColor="White" />
					</StackLayout>

					<Label
						Grid.Row="10"
						Grid.Column="1"
						FontFamily="{StaticResource MaterialFontFamily}"
						FontSize="50"
						HorizontalTextAlignment="End"
						IsVisible="{Binding IsNameSame}"
						Text="{x:Static fontawesome:QloudidAppFlatIcons.ToggleSwitch}"
						TextColor="#4FD471"
						VerticalTextAlignment="Center">
						<Label.GestureRecognizers>
							<TapGestureRecognizer Command="{Binding IsYourNameOnTheDoorCommand}" />
						</Label.GestureRecognizers>
					</Label>

					<Label
						Grid.Row="10"
						Grid.Column="1"
						FontFamily="{StaticResource MaterialFontFamily}"
						FontSize="50"
						HorizontalTextAlignment="End"
						IsVisible="{Binding IsNameSame, Converter={StaticResource InverseBoolConverter}}"
						Text="{x:Static fontawesome:QloudidAppFlatIcons.ToggleSwitchOff}"
						TextColor="#E53614"
						VerticalTextAlignment="Center">
						<Label.GestureRecognizers>
							<TapGestureRecognizer Command="{Binding IsYourNameOnTheDoorCommand}" />
						</Label.GestureRecognizers>
					</Label>

					<Frame
						Grid.Row="11"
						Grid.ColumnSpan="2"
						Margin="0,15,0,0"
						Padding="25,0,25,0"
						BackgroundColor="#F4B400"
						CornerRadius="8"
						HasShadow="False"
						IsClippedToBounds="True"
						IsVisible="{Binding IsNameEntryVisible}">
						<Grid RowSpacing="0" VerticalOptions="CenterAndExpand">
							<Grid.RowDefinitions>
								<RowDefinition Height="15" />
								<RowDefinition Height="56" />
								<RowDefinition Height="31" />
							</Grid.RowDefinitions>
							<textinputlayout:SfTextInputLayout
								Grid.Row="1"
								ContainerBackgroundColor="Transparent"
								ContainerType="Outlined"
								FocusedColor="#181A1F"
								FocusedStrokeWidth="2"
								HeightRequest="56"
								Hint="What name is on the door"
								LeadingViewPosition="Inside"
								OutlineCornerRadius="12"
								TrailingViewPosition="Inside"
								UnfocusedColor="#181A1F"
								UnfocusedStrokeWidth="1"
								VerticalOptions="CenterAndExpand">
								<textinputlayout:SfTextInputLayout.LeadingView>
									<Label
										FontFamily="{StaticResource MaterialFontFamily}"
										FontSize="20"
										HorizontalTextAlignment="Center"
										Text="{x:Static fontawesome:QloudidAppFlatIcons.Account}"
										TextColor="#181A1F"
										VerticalTextAlignment="Center" />
								</textinputlayout:SfTextInputLayout.LeadingView>
								<controls:CustomFloatingLabelEntry
									BackgroundColor="#F8F8FB"
									FontFamily="PoppinsRegularFontFamily"
									FontSize="16"
									Placeholder="What name is on the door"
									PlaceholderColor="#181A1F"
									Text="{Binding Name}"
									TextColor="#181A1F" />
							</textinputlayout:SfTextInputLayout>
						</Grid>
					</Frame>

					<BoxView
						Grid.Row="13"
						Grid.ColumnSpan="2"
						BackgroundColor="White"
						Opacity="0.10" />

					<StackLayout
						Grid.Row="15"
						Grid.Column="0"
						Spacing="5"
						VerticalOptions="CenterAndExpand">
						<Label
							FontFamily="PoppinsRegularFontFamily"
							FontSize="16"
							HorizontalTextAlignment="Start"
							Opacity="0.7"
							Text="Is this your"
							TextColor="White" />

						<Label
							FontFamily="PoppinsRegularFontFamily"
							FontSize="16"
							HorizontalTextAlignment="Start"
							Opacity="0.7"
							Text="residencial address?"
							TextColor="White" />
					</StackLayout>

					<Label
						Grid.Row="15"
						Grid.Column="1"
						FontFamily="{StaticResource MaterialFontFamily}"
						FontSize="50"
						HorizontalTextAlignment="End"
						IsVisible="{Binding IsInvoiceAddressSame}"
						Text="{x:Static fontawesome:QloudidAppFlatIcons.ToggleSwitch}"
						TextColor="#4FD471"
						VerticalTextAlignment="Center">
						<Label.GestureRecognizers>
							<TapGestureRecognizer Command="{Binding IsInvoiceAddressSameCommand}" />
						</Label.GestureRecognizers>
					</Label>

					<Label
						Grid.Row="15"
						Grid.Column="1"
						FontFamily="{StaticResource MaterialFontFamily}"
						FontSize="50"
						HorizontalTextAlignment="End"
						IsVisible="{Binding IsInvoiceAddressSame, Converter={StaticResource InverseBoolConverter}}"
						Text="{x:Static fontawesome:QloudidAppFlatIcons.ToggleSwitchOff}"
						TextColor="#E53614"
						VerticalTextAlignment="Center">
						<Label.GestureRecognizers>
							<TapGestureRecognizer Command="{Binding IsInvoiceAddressSameCommand}" />
						</Label.GestureRecognizers>
					</Label>

					<Frame
						Grid.Row="16"
						Grid.ColumnSpan="2"
						Margin="0,15,0,0"
						Padding="25,0,25,0"
						BackgroundColor="#F4B400"
						CornerRadius="8"
						HasShadow="False"
						IsClippedToBounds="True"
						IsVisible="{Binding IsInvoiceAddressVisible}">
						<Grid ColumnSpacing="13" RowSpacing="24">
							<Grid.RowDefinitions>
								<RowDefinition Height="0" />
								<RowDefinition Height="56" />
								<RowDefinition Height="56" />
								<RowDefinition Height="56" />
								<RowDefinition Height="25" />
							</Grid.RowDefinitions>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="69" />
							</Grid.ColumnDefinitions>
							<textinputlayout:SfTextInputLayout
								Grid.Row="1"
								Grid.Column="0"
								ContainerBackgroundColor="Transparent"
								ContainerType="Outlined"
								FocusedColor="#181A1F"
								FocusedStrokeWidth="2"
								HeightRequest="56"
								Hint="Address"
								LeadingViewPosition="Inside"
								OutlineCornerRadius="12"
								TrailingViewPosition="Inside"
								UnfocusedColor="#181A1F"
								UnfocusedStrokeWidth="1">
								<controls:CustomFloatingLabelEntry
									BackgroundColor="#F8F8FB"
									FontFamily="PoppinsRegularFontFamily"
									FontSize="16"
									Placeholder="Address"
									PlaceholderColor="#181A1F"
									Text="{Binding InvoiceAddress}"
									TextColor="#181A1F" />
							</textinputlayout:SfTextInputLayout>

							<textinputlayout:SfTextInputLayout
								Grid.Row="1"
								Grid.Column="1"
								ContainerBackgroundColor="Transparent"
								ContainerType="Outlined"
								FocusedColor="#181A1F"
								FocusedStrokeWidth="2"
								HeightRequest="56"
								Hint="No"
								LeadingViewPosition="Inside"
								OutlineCornerRadius="12"
								TrailingViewPosition="Inside"
								UnfocusedColor="#181A1F"
								UnfocusedStrokeWidth="1">
								<controls:CustomFloatingLabelEntry
									BackgroundColor="#F8F8FB"
									FontFamily="PoppinsRegularFontFamily"
									FontSize="16"
									Placeholder="No"
									PlaceholderColor="#181A1F"
									Text="{Binding InvoicePortNumber}"
									TextColor="#181A1F" />
							</textinputlayout:SfTextInputLayout>

							<textinputlayout:SfTextInputLayout
								Grid.Row="2"
								Grid.ColumnSpan="2"
								ContainerBackgroundColor="Transparent"
								ContainerType="Outlined"
								FocusedColor="#181A1F"
								FocusedStrokeWidth="2"
								HeightRequest="56"
								Hint="Zip code"
								LeadingViewPosition="Inside"
								OutlineCornerRadius="12"
								TrailingViewPosition="Inside"
								UnfocusedColor="#181A1F"
								UnfocusedStrokeWidth="1">
								<textinputlayout:SfTextInputLayout.LeadingView>
									<Label
										FontFamily="{StaticResource MaterialFontFamily}"
										FontSize="20"
										HorizontalTextAlignment="Center"
										Text="{x:Static fontawesome:QloudidAppFlatIcons.PostOutline}"
										TextColor="#181A1F"
										VerticalTextAlignment="Center" />
								</textinputlayout:SfTextInputLayout.LeadingView>
								<controls:CustomFloatingLabelEntry
									BackgroundColor="#F8F8FB"
									FontFamily="PoppinsRegularFontFamily"
									FontSize="16"
									Placeholder="Zip code"
									PlaceholderColor="#181A1F"
									Text="{Binding InvoiceZipCode}"
									TextColor="#181A1F" />
							</textinputlayout:SfTextInputLayout>

							<textinputlayout:SfTextInputLayout
								Grid.Row="3"
								Grid.ColumnSpan="2"
								ContainerBackgroundColor="Transparent"
								ContainerType="Outlined"
								FocusedColor="#181A1F"
								FocusedStrokeWidth="2"
								HeightRequest="56"
								Hint="City"
								LeadingViewPosition="Inside"
								OutlineCornerRadius="12"
								TrailingViewPosition="Inside"
								UnfocusedColor="#181A1F"
								UnfocusedStrokeWidth="1">
								<textinputlayout:SfTextInputLayout.LeadingView>
									<Label
										FontFamily="{StaticResource MaterialFontFamily}"
										FontSize="20"
										HorizontalTextAlignment="Center"
										Text="{x:Static fontawesome:QloudidAppFlatIcons.City}"
										TextColor="#181A1F"
										VerticalTextAlignment="Center" />
								</textinputlayout:SfTextInputLayout.LeadingView>
								<controls:CustomFloatingLabelEntry
									BackgroundColor="#F8F8FB"
									FontFamily="PoppinsRegularFontFamily"
									FontSize="16"
									Placeholder="City"
									PlaceholderColor="#181A1F"
									Text="{Binding InvoiceCity}"
									TextColor="#181A1F" />
							</textinputlayout:SfTextInputLayout>
						</Grid>

					</Frame>

					<BoxView
						Grid.Row="18"
						Grid.ColumnSpan="2"
						BackgroundColor="White"
						Opacity="0.10" />

					<StackLayout
						Grid.Row="20"
						Grid.Column="0"
						Spacing="5"
						VerticalOptions="CenterAndExpand">
						<Label
							FontFamily="PoppinsRegularFontFamily"
							FontSize="16"
							HorizontalTextAlignment="Start"
							Opacity="0.7"
							Text="Is a code needed to"
							TextColor="White" />

						<Label
							FontFamily="PoppinsRegularFontFamily"
							FontSize="16"
							HorizontalTextAlignment="Start"
							Opacity="0.7"
							Text="open port door?"
							TextColor="White" />
					</StackLayout>

					<Label
						Grid.Row="20"
						Grid.Column="1"
						FontFamily="{StaticResource MaterialFontFamily}"
						FontSize="50"
						HorizontalTextAlignment="End"
						IsVisible="{Binding IsEntryCode, Converter={StaticResource InverseBoolConverter}}"
						Text="{x:Static fontawesome:QloudidAppFlatIcons.ToggleSwitch}"
						TextColor="#4FD471"
						VerticalTextAlignment="Center">
						<Label.GestureRecognizers>
							<TapGestureRecognizer Command="{Binding IsEntryCodeCommand}" />
						</Label.GestureRecognizers>
					</Label>

					<Label IsVisible="{Binding IsEntryCode}"
						Grid.Row="20"
						Grid.Column="1"
						FontFamily="{StaticResource MaterialFontFamily}"
						FontSize="50"
						HorizontalTextAlignment="End"
						Text="{x:Static fontawesome:QloudidAppFlatIcons.ToggleSwitchOff}"
						TextColor="#E53614"
						VerticalTextAlignment="Center">
						<Label.GestureRecognizers>
							<TapGestureRecognizer Command="{Binding IsEntryCodeCommand}" />
						</Label.GestureRecognizers>
					</Label>

					<Frame
						Grid.Row="21"
						Grid.ColumnSpan="2"
						Margin="0,15,0,0"
						Padding="25,0,25,0"
						BackgroundColor="#F4B400"
						CornerRadius="8"
						HasShadow="False"
						IsClippedToBounds="True"
						IsVisible="{Binding IsEntryCode, Converter={StaticResource InverseBoolConverter}}">
						<Grid RowSpacing="0" VerticalOptions="CenterAndExpand">
							<Grid.RowDefinitions>
								<RowDefinition Height="15" />
								<RowDefinition Height="56" />
								<RowDefinition Height="31" />
							</Grid.RowDefinitions>
							<textinputlayout:SfTextInputLayout
								Grid.Row="1"
								ContainerBackgroundColor="Transparent"
								ContainerType="Outlined"
								FocusedColor="#181A1F"
								FocusedStrokeWidth="2"
								HeightRequest="56"
								Hint="Code"
								LeadingViewPosition="Inside"
								OutlineCornerRadius="12"
								TrailingViewPosition="Inside"
								UnfocusedColor="#181A1F"
								UnfocusedStrokeWidth="1"
								VerticalOptions="CenterAndExpand">
								<textinputlayout:SfTextInputLayout.LeadingView>
									<Label
										FontFamily="{StaticResource MaterialFontFamily}"
										FontSize="20"
										HorizontalTextAlignment="Center"
										Text="{x:Static fontawesome:QloudidAppFlatIcons.FormTextboxPassword}"
										TextColor="#181A1F"
										VerticalTextAlignment="Center" />
								</textinputlayout:SfTextInputLayout.LeadingView>
								<controls:CustomFloatingLabelEntry
									BackgroundColor="#F8F8FB"
									FontFamily="PoppinsRegularFontFamily"
									FontSize="16"
									Placeholder="Code"
									PlaceholderColor="#181A1F"
									Text="{Binding EntryCode}"
									TextColor="#181A1F" />
							</textinputlayout:SfTextInputLayout>
						</Grid>
					</Frame>

					<BoxView
						Grid.Row="23"
						Grid.ColumnSpan="2"
						BackgroundColor="White"
						Opacity="0.10" />

					<controls:CustomButton
						Grid.Row="25"
						Grid.ColumnSpan="2"
						Margin="0"
						BackgroundColor="#6263ED"
						BorderColor="#6263ED"
						Command="{Binding AddAddressCommand}"
						CornerRadius="12"
						FontFamily="PoppinsSemiBoldFontFamily"
						FontSize="16"
						HeightRequest="56"
						Text="Add Address"
						TextColor="White"
						VerticalOptions="EndAndExpand" />
				</Grid>
			</StackLayout>
		</ScrollView>
	</Grid>


