<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="Qloudid.Views.Dependent.DependentDetailPage"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:fontawesome="clr-namespace:Qloudid.Helper"
	xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
	xmlns:usercontrols="clr-namespace:Qloudid.UserControls"
	ios:Page.UseSafeArea="True"
	BackgroundColor="#181A1F"
	NavigationPage.HasNavigationBar="False">
	<Grid
		Margin="0,22,0,20"
		ColumnSpacing="0"
		RowSpacing="0">
		<Grid.RowDefinitions>
			<RowDefinition Height="40" />
			<RowDefinition Height="53" />
			<RowDefinition Height="120" />
			<RowDefinition Height="44" />
			<RowDefinition Height="36" />
			<RowDefinition Height="8" />
			<RowDefinition Height="24" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="28" />
			<ColumnDefinition Width="40" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="40" />
			<ColumnDefinition Width="28" />
		</Grid.ColumnDefinitions>

		<Frame
			Grid.Row="0"
			Grid.Column="1"
			Padding="0"
			BackgroundColor="Transparent"
			BorderColor="White"
			CornerRadius="8"
			IsClippedToBounds="True"
			Opacity="0.2" />

		<Button
			Grid.Row="0"
			Grid.Column="1"
			Padding="0"
			BackgroundColor="Transparent"
			Command="{Binding CloseCommand}"
			FontFamily="{StaticResource MaterialFontFamily}"
			FontSize="25"
			Text="{x:Static fontawesome:QloudidAppFlatIcons.ChevronLeft}"
			TextColor="White" />

		<Label
			Grid.Row="0"
			Grid.Column="2"
			FontFamily="PoppinsRegularFontFamily"
			FontSize="14"
			HorizontalTextAlignment="Center"
			Text="Child page"
			TextColor="White"
			VerticalTextAlignment="Center" />

		<Frame
			Grid.Row="0"
			Grid.Column="3"
			Padding="0"
			BackgroundColor="Transparent"
			BorderColor="White"
			CornerRadius="8"
			IsClippedToBounds="True"
			Opacity="0.2" />

		<Button
			Grid.Row="0"
			Grid.Column="3"
			Padding="0"
			BackgroundColor="Transparent"
			Command="{Binding DependentProfilePageCommand}"
			FontFamily="{StaticResource MaterialFontFamily}"
			FontSize="20"
			Text="{x:Static fontawesome:QloudidAppFlatIcons.SettingIcon}"
			TextColor="White" />

		<BoxView
			Grid.Row="2"
			Grid.Column="2"
			BackgroundColor="#FA9EFF"
			CornerRadius="60"
			HorizontalOptions="CenterAndExpand"
			WidthRequest="120" />

		<ImageButton
			x:Name="imgUser"
			Grid.Row="2"
			Grid.Column="2"
			Aspect="AspectFill"
			BackgroundColor="Transparent"
			BorderColor="Black"
			BorderWidth="2"
			CornerRadius="58"
			HeightRequest="116"
			HorizontalOptions="CenterAndExpand"
			Source="iconPassport.png"
			VerticalOptions="CenterAndExpand"
			WidthRequest="116" />

		<Label
			Grid.Row="4"
			Grid.Column="2"
			FontAttributes="Bold"
			FontFamily="PoppinsBoldFontFamily"
			FontSize="24"
			HorizontalTextAlignment="Center"
			LineBreakMode="TailTruncation"
			MaxLines="1"
			TextColor="White"
			VerticalTextAlignment="Center">
			<Label.FormattedText>
				<FormattedString>
					<Span Text="{Binding DependentDetail.FirstName}" />
					<Span Text=" " />
					<Span Text="{Binding DependentDetail.LastName}" />
				</FormattedString>
			</Label.FormattedText>
		</Label>

		<Label
			Grid.Row="6"
			Grid.Column="2"
			FontFamily="PoppinsRegularFontFamily"
			FontSize="14"
			HorizontalTextAlignment="Center"
			LineBreakMode="TailTruncation"
			MaxLines="1"
			Opacity="0.42"
			TextColor="White"
			VerticalTextAlignment="Center">
			<Label.FormattedText>
				<FormattedString>
					<Span Text="{Binding DependentDetail.Age}" />
					<Span Text=" years old" />
				</FormattedString>
			</Label.FormattedText>
		</Label>

		<Grid
			Grid.Row="7"
			Grid.Column="1"
			Grid.ColumnSpan="3"
			ColumnSpacing="31"
			HeightRequest="130"
			HorizontalOptions="CenterAndExpand"
			RowSpacing="0"
			VerticalOptions="EndAndExpand">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="65" />
				<ColumnDefinition Width="100" />
				<ColumnDefinition Width="65" />
			</Grid.ColumnDefinitions>

			<StackLayout
				Grid.Column="0"
				HorizontalOptions="StartAndExpand"
				Spacing="14">
				<Button
					Padding="0"
					BackgroundColor="#242A37"
					CornerRadius="24"
					FontFamily="{StaticResource MaterialFontFamily}"
					FontSize="20"
					HeightRequest="48"
					HorizontalOptions="CenterAndExpand"
					Text="{x:Static fontawesome:QloudidAppFlatIcons.PhoneOutline}"
					TextColor="#45C366"
					WidthRequest="48" />

				<Label
					FontFamily="PoppinsRegularFontFamily"
					FontSize="14"
					HorizontalTextAlignment="Center"
					Opacity="0.70"
					Text="Appstore"
					TextColor="White"
					VerticalTextAlignment="Center" />
			</StackLayout>

			<StackLayout
				Grid.Column="1"
				HorizontalOptions="StartAndExpand"
				Spacing="26">
				<Button
					Padding="0"
					BackgroundColor="#242A37"
					CornerRadius="40"
					FontFamily="{StaticResource MaterialFontFamily}"
					FontSize="40"
					HeightRequest="80"
					HorizontalOptions="CenterAndExpand"
					Text="{x:Static fontawesome:QloudidAppFlatIcons.Menu}"
					TextColor="#4C7CE5"
					WidthRequest="80" />

				<Label
					FontFamily="PoppinsRegularFontFamily"
					FontSize="14"
					HorizontalTextAlignment="Center"
					Opacity="0.70"
					Text="Scan QR code"
					TextColor="White"
					VerticalTextAlignment="Center" />
			</StackLayout>

			<StackLayout
				Grid.Column="2"
				HorizontalOptions="StartAndExpand"
				Spacing="14">
				<Button
					Padding="0"
					BackgroundColor="#242A37"
					CornerRadius="24"
					FontFamily="{StaticResource MaterialFontFamily}"
					FontSize="20"
					HeightRequest="48"
					HorizontalOptions="CenterAndExpand"
					Text="{x:Static fontawesome:QloudidAppFlatIcons.ShareVariantOutline}"
					TextColor="#FF9129"
					WidthRequest="48" />

				<Label
					FontFamily="PoppinsRegularFontFamily"
					FontSize="14"
					HorizontalTextAlignment="Center"
					Opacity="0.70"
					Text="History"
					TextColor="White"
					VerticalTextAlignment="Center" />
			</StackLayout>
		</Grid>
	</Grid>
</ContentPage>