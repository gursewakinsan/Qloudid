<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Qloudid.Views.RentOut.RentOutPage"
    xmlns:fontawesome="clr-namespace:Qloudid.Helper"
	xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core" 
    xmlns:controls="clr-namespace:Qloudid.Controls"
    ios:Page.UseSafeArea="False"
	BackgroundColor="#282A34"
	NavigationPage.HasNavigationBar="False">
    <Grid
		Margin="0,50,0,0"
		ColumnSpacing="0"
		RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="24" />
            <RowDefinition Height="29" />
            <RowDefinition Height="102" />
            <RowDefinition Height="29" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <Label
			Grid.Row="0"
			Grid.Column="0"
			Margin="18,0,0,0"
			FontFamily="{StaticResource MaterialFontFamily}"
			FontSize="25"
			HorizontalTextAlignment="Start"
			Text="{x:Static fontawesome:QloudidAppFlatIcons.ChevronLeft}"
			TextColor="White"
			VerticalTextAlignment="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding CloseCommand}"/>
            </Label.GestureRecognizers>
        </Label>

        <Label
			Grid.Row="0"
			Grid.Column="1"
			FontFamily="PoppinsRegularFontFamily"
			FontSize="14"
            Text="Your home"
			HorizontalTextAlignment="Center"
			TextColor="White"
			VerticalTextAlignment="Center" />

        <Label
			Grid.Row="0"
			Grid.Column="2"
			FontFamily="{StaticResource MaterialFontFamily}"
			FontSize="25" Margin="0,0,28,0"
			HorizontalTextAlignment="End"
			Text="{x:Static fontawesome:QloudidAppFlatIcons.Account}"
			TextColor="White"
			VerticalTextAlignment="Center"/>

        <ScrollView
			Grid.Row="2"
			Grid.ColumnSpan="3"
			Margin="28,0,0,0"
			HorizontalScrollBarVisibility="Never"
			Orientation="Horizontal">
            <Grid ColumnSpacing="0" RowSpacing="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="76" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="76" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="76" />
                    <ColumnDefinition Width="20" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="76" />
                    <RowDefinition Height="8" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Button
					Grid.Row="0"
					Grid.Column="0"
					BackgroundColor="Transparent"
					BorderColor="#737B8C"
					BorderWidth="1"
					CornerRadius="38"
					FontFamily="{StaticResource MaterialFontFamily}"
					FontSize="24"
                    Command="{Binding CloseCommand}"
					Text="{x:Static fontawesome:QloudidAppFlatIcons.HomeVariant}"
					TextColor="White" />

                <Button
					Grid.Row="0"
					Grid.Column="2"
					BackgroundColor="White"
					CornerRadius="38"
					FontFamily="{StaticResource MaterialFontFamily}"
					FontSize="24"
                    Command="{Binding RentOutCommand}"
					Text="{x:Static fontawesome:QloudidAppFlatIcons.Soundcloud}"
					TextColor="#181A1F" />

                <Button
					Grid.Row="0"
					Grid.Column="4"
					BackgroundColor="Transparent"
					BorderColor="#737B8C"
					BorderWidth="1"
					CornerRadius="38"
					Command="{Binding SellPageCommand}"
					FontFamily="{StaticResource MaterialFontFamily}"
					FontSize="24"
					Text="{x:Static fontawesome:QloudidAppFlatIcons.ContactlessPaymentCircleOutline}"
					TextColor="White" />

                <Label
					Grid.Row="1"
					Grid.RowSpan="2"
					Grid.Column="0"
					FontFamily="PoppinsRegularFontFamily"
					FontSize="12"
					HorizontalTextAlignment="Center"
					Text="Apartment"
					TextColor="White"
					VerticalTextAlignment="End" />

                <Label
					Grid.Row="1"
					Grid.RowSpan="2"
					Grid.Column="2"
					FontFamily="PoppinsRegularFontFamily"
					FontSize="12"
					HorizontalTextAlignment="Center"
					Text="Rent out"
					TextColor="White"
					VerticalTextAlignment="End" />

                <Label
					Grid.Row="1"
					Grid.RowSpan="2"
					Grid.Column="4"
					FontFamily="PoppinsRegularFontFamily"
					FontSize="12"
					HorizontalTextAlignment="Center"
					Text="Sell"
					TextColor="White"
					VerticalTextAlignment="End" />
            </Grid>
        </ScrollView>

        <controls:CustomFrame
			Grid.Row="4"
			Grid.ColumnSpan="3"
			Padding="0"
			BackgroundColor="#1B1D24"
			CornerRadius="38,38,0,0"
			HasShadow="False"
			IsClippedToBounds="True">
            <ScrollView VerticalScrollBarVisibility="Never" IsVisible="{Binding IsPageLoad}">
                <StackLayout>
                    <Grid 
                        RowSpacing="0" 
                        ColumnSpacing="15"
                        Margin="28,35,28,0"
                        IsVisible="{Binding Address.IsPublished}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="15"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="12"/>
                            <RowDefinition Height="1"/>
                            <RowDefinition Height="75"/>
                            <RowDefinition Height="1"/>
                            <RowDefinition Height="75"/>
                            <RowDefinition Height="1"/>
                            <RowDefinition Height="75"/>
                            <RowDefinition Height="1"/>
                            <RowDefinition Height="75"/>
                            <RowDefinition Height="1"/>
                            <RowDefinition Height="75"/>
                            <RowDefinition Height="1"/>
                            <RowDefinition Height="20"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Grid.Row="0"
						    FontSize="20"
						    Text="Milano"
						    TextColor="White"
                            HorizontalTextAlignment="Start"
                            FontFamily="PoppinsSemiBoldFontFamily"/>

                        <Label
                            Grid.Row="2"
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
						    FontFamily="PoppinsRegularFontFamily"
						    FontSize="16"
                            LineBreakMode="TailTruncation"
                            HorizontalTextAlignment="Start"
						    Text="Mjölnerbacken 61, 174 60, Stockholm"
						    TextColor="White"
                            Opacity="0.42"/>

                        <BoxView 
						    Grid.Row="4" 
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
                            Opacity="0.67"
						    BackgroundColor="#F4B400" />

                        <!--Bookings-->
                        <Button
						    Grid.Row="7"
						    Grid.Column="0"
						    FontSize="15"
                            HeightRequest="40"
                            WidthRequest="40"
                            CornerRadius="20"
                            BackgroundColor="#242A37"
                            VerticalOptions="CenterAndExpand"
                            HorizontalOptions="StartAndExpand"
                            FontFamily="{StaticResource MaterialFontFamily}"
						    Text="{x:Static fontawesome:QloudidAppFlatIcons.ReorderHorizontal}"
						    TextColor="White" Command="{Binding BookingPageCommand}"/>

                        <Label
						    Grid.Row="7"
                            Grid.Column="1"
						    FontFamily="PoppinsRegularFontFamily"
						    FontSize="15"
						    Text="Bookings"
						    TextColor="White" 
                            Opacity="0.42"
                            VerticalTextAlignment="Center"
						    HorizontalTextAlignment="Start">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding BookingPageCommand}" />
                            </Label.GestureRecognizers>
                        </Label>

                        <Label
						    Grid.Row="7"
						    Grid.Column="2"
						    FontFamily="{StaticResource MaterialFontFamily}"
						    FontSize="20"
						    HorizontalTextAlignment="End"
						    Text="{x:Static fontawesome:QloudidAppFlatIcons.ChevronRight}"
						    TextColor="#F4B400"
						    VerticalTextAlignment="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding BookingPageCommand}" />
                            </Label.GestureRecognizers>
                        </Label>

                        <BoxView 
						    Grid.Row="6" 
                            Grid.Column="1"
                            Grid.ColumnSpan="2"
						    BackgroundColor="White" 
						    Opacity="0.1"/>

                        <!--Calendar-->
                        <Button
						    Grid.Row="5"
						    Grid.Column="0"
						    TextColor="White"
						    FontSize="15"
                            HeightRequest="40"
                            WidthRequest="40"
                            CornerRadius="20"
                            BackgroundColor="#242A37"
                            VerticalOptions="CenterAndExpand"
                            HorizontalOptions="StartAndExpand"
                            FontFamily="{StaticResource MaterialFontFamily}"
						    Text="{x:Static fontawesome:QloudidAppFlatIcons.Account}"/>

                        <Label
						    Grid.Row="5"
                            Grid.Column="1"
						    FontFamily="PoppinsRegularFontFamily"
						    FontSize="15"
						    Text="Calendar"
						    TextColor="White" 
                            Opacity="0.42"
                            VerticalTextAlignment="Center"
						    HorizontalTextAlignment="Start">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer />
                            </Label.GestureRecognizers>
                        </Label>

                        <Label
						    Grid.Row="5"
						    Grid.Column="2"
						    FontFamily="{StaticResource MaterialFontFamily}"
						    FontSize="20"
						    HorizontalTextAlignment="End"
						    Text="{x:Static fontawesome:QloudidAppFlatIcons.ChevronRight}"
						    TextColor="#F4B400"
						    VerticalTextAlignment="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer />
                            </Label.GestureRecognizers>
                        </Label>

                        <BoxView 
						    Grid.Row="8" 
                            Grid.Column="1"
                            Grid.ColumnSpan="2"
						    BackgroundColor="White" 
						    Opacity="0.1"/>

                        <!--Check-in & out-->
                        <Button
						    Grid.Row="9"
						    Grid.Column="0"
						    FontSize="15"
                            HeightRequest="40"
                            WidthRequest="40"
                            CornerRadius="20"
                            TextColor="White"
                            BackgroundColor="#242A37"
                            VerticalOptions="CenterAndExpand"
                            HorizontalOptions="StartAndExpand"
                            FontFamily="{StaticResource MaterialFontFamily}"
						    Text="{x:Static fontawesome:QloudidAppFlatIcons.LockOutline}"/>

                        <Label
						    Grid.Row="9"
                            Grid.Column="1"
						    FontFamily="PoppinsRegularFontFamily"
						    FontSize="15"
						    Text="Check-in &amp; out"
						    TextColor="White" 
                            Opacity="0.42"
                            VerticalTextAlignment="Center"
						    HorizontalTextAlignment="Start">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer />
                            </Label.GestureRecognizers>
                        </Label>

                        <Label
						    Grid.Row="9"
						    Grid.Column="2"
						    FontFamily="{StaticResource MaterialFontFamily}"
						    FontSize="20"
						    HorizontalTextAlignment="End"
						    Text="{x:Static fontawesome:QloudidAppFlatIcons.ChevronRight}"
						    TextColor="#F4B400"
						    VerticalTextAlignment="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer />
                            </Label.GestureRecognizers>
                        </Label>

                        <BoxView 
						    Grid.Row="10" 
                            Grid.Column="1"
                            Grid.ColumnSpan="2"
						    BackgroundColor="White" 
						    Opacity="0.1"/>

                        <!--Police report & guest book-->
                        <Button
						    Grid.Row="11"
						    Grid.Column="0"
						    FontSize="15"
                            HeightRequest="40"
                            WidthRequest="40"
                            CornerRadius="20"
                            TextColor="White"
                            BackgroundColor="#242A37"
                            VerticalOptions="CenterAndExpand"
                            HorizontalOptions="StartAndExpand"
                            FontFamily="{StaticResource MaterialFontFamily}"
						    Text="{x:Static fontawesome:QloudidAppFlatIcons.HomeVariant}"/>

                        <Label
						    Grid.Row="11"
                            Grid.Column="1"
						    FontFamily="PoppinsRegularFontFamily"
						    FontSize="15"
						    Text="Police report &amp; guest book"
						    TextColor="White" 
                            Opacity="0.42"
                            VerticalTextAlignment="Center"
						    HorizontalTextAlignment="Start">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer />
                            </Label.GestureRecognizers>
                        </Label>

                        <Label
						    Grid.Row="11"
						    Grid.Column="2"
						    FontFamily="{StaticResource MaterialFontFamily}"
						    FontSize="20"
						    HorizontalTextAlignment="End"
						    Text="{x:Static fontawesome:QloudidAppFlatIcons.ChevronRight}"
						    TextColor="#F4B400"
						    VerticalTextAlignment="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer />
                            </Label.GestureRecognizers>
                        </Label>

                        <BoxView 
						    Grid.Row="12" 
                            Grid.Column="1"
                            Grid.ColumnSpan="2"
						    BackgroundColor="White" 
						    Opacity="0.1"/>

                        <!--Property details-->
                        <Button
						    Grid.Row="13"
						    Grid.Column="0"
						    FontSize="15"
                            HeightRequest="40"
                            WidthRequest="40"
                            CornerRadius="20"
                            TextColor="White"
                            BackgroundColor="#242A37"
                            VerticalOptions="CenterAndExpand"
                            HorizontalOptions="StartAndExpand"
                            Command="{Binding PropertyDetailsCommand}"
                            FontFamily="{StaticResource MaterialFontFamily}"
						    Text="{x:Static fontawesome:QloudidAppFlatIcons.ImageOutline}"/>

                        <Label
						    Grid.Row="13"
                            Grid.Column="1"
						    FontFamily="PoppinsRegularFontFamily"
						    FontSize="15"
						    Text="Property details"
						    TextColor="White" 
                            Opacity="0.42"
                            VerticalTextAlignment="Center"
						    HorizontalTextAlignment="Start">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding PropertyDetailsCommand}"/>
                            </Label.GestureRecognizers>
                        </Label>

                        <Label
						    Grid.Row="13"
						    Grid.Column="2"
						    FontFamily="{StaticResource MaterialFontFamily}"
						    FontSize="20"
						    HorizontalTextAlignment="End"
						    Text="{x:Static fontawesome:QloudidAppFlatIcons.ChevronRight}"
						    TextColor="#F4B400"
						    VerticalTextAlignment="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding PropertyDetailsCommand}"/>
                            </Label.GestureRecognizers>
                        </Label>

                        <BoxView 
						    Grid.Row="14" 
                            Grid.Column="1"
                            Grid.ColumnSpan="2"
						    BackgroundColor="White" 
						    Opacity="0.1"/>
                    </Grid>
                    
                    <Grid 
                        RowSpacing="0" 
                        ColumnSpacing="15" 
                        Margin="28,35,28,0"
                        IsVisible="{Binding Address.IsPublished, Converter={StaticResource InverseBoolConverter}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="11"/>
                            <RowDefinition Height="1"/>
                            <RowDefinition Height="65"/>
                            <RowDefinition Height="1"/>
                            <RowDefinition Height="65"/>
                            <RowDefinition Height="1"/>
                            <RowDefinition Height="65"/>
                            <RowDefinition Height="1"/>
                            <RowDefinition Height="65"/>
                            <RowDefinition Height="1"/>
                            <RowDefinition Height="65"/>
                            <RowDefinition Height="1"/>
                            <RowDefinition Height="32"/>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="34"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="26"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Grid.Row="0"
						    FontSize="20"
						    Text="RENT OUT"
						    TextColor="White"
                            HorizontalTextAlignment="Start"
                            FontFamily="PoppinsSemiBoldFontFamily"/>

                        <Label
                            Grid.Row="2"
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
						    FontFamily="PoppinsRegularFontFamily"
						    FontSize="16"
                            MaxLines="1"
                            LineBreakMode="TailTruncation"
                            HorizontalTextAlignment="Start"
						    Text="All section must turn green to continue."
						    TextColor="White"
                            Opacity="0.42"/>

                        <BoxView 
						    Grid.Row="4" 
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
						    BackgroundColor="White" 
						    Opacity="0.1"/>

                        <Label
						    Grid.Row="5"
						    Grid.Column="0"
						    FontFamily="{StaticResource MaterialFontFamily}"
						    FontSize="13"
						    HorizontalTextAlignment="Center"
						    Text="{x:Static fontawesome:QloudidAppFlatIcons.Check}"
						    TextColor="#242A37"
						    VerticalTextAlignment="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding GoToDoApartmentPageCommand}"/>
                            </Label.GestureRecognizers>
                        </Label>

                        <!--Apartment-->
                        <BoxView 
						    Grid.Row="5" 
						    Grid.Column="0" 
						    CornerRadius="13"
                            HeightRequest="26"
						    BackgroundColor="{Binding ApartmentBg}"
                            VerticalOptions="CenterAndExpand">
                            <BoxView.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding GoToDoApartmentPageCommand}"/>
                            </BoxView.GestureRecognizers>
                        </BoxView>

                        <Label
						    Grid.Row="5"
						    Grid.Column="0"
						    FontFamily="{StaticResource MaterialFontFamily}"
						    FontSize="13"
						    HorizontalTextAlignment="Center"
						    Text="{x:Static fontawesome:QloudidAppFlatIcons.Check}"
						    TextColor="#242A37"
                            IsVisible="{Binding IsApartment}"
						    VerticalTextAlignment="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding GoToDoApartmentPageCommand}"/>
                            </Label.GestureRecognizers>
                        </Label>

                        <Label
						    Grid.Row="5"
						    Grid.Column="0"
						    FontFamily="{StaticResource MaterialFontFamily}"
						    FontSize="13"
						    HorizontalTextAlignment="Center"
						    Text="{x:Static fontawesome:QloudidAppFlatIcons.BellOutline}"
						    TextColor="#242A37"
						    VerticalTextAlignment="Center"
                            IsVisible="{Binding IsApartment, Converter={StaticResource InverseBoolConverter}}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding GoToDoApartmentPageCommand}"/>
                            </Label.GestureRecognizers>
                        </Label>

                        <Label
						    Grid.Row="5"
                            Grid.Column="1"
						    FontFamily="PoppinsRegularFontFamily"
						    FontSize="15"
						    Text="Apartment"
						    TextColor="White" 
                            Opacity="0.60"
                            VerticalTextAlignment="Center"
						    HorizontalTextAlignment="Start">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding GoToDoApartmentPageCommand}"/>
                            </Label.GestureRecognizers>
                        </Label>

                        <Label
						    Grid.Row="5"
						    Grid.Column="2"
						    FontFamily="{StaticResource MaterialFontFamily}"
						    FontSize="25"
						    HorizontalTextAlignment="End"
						    Text="{x:Static fontawesome:QloudidAppFlatIcons.ChevronRight}"
						    TextColor="White"
						    VerticalTextAlignment="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding GoToDoApartmentPageCommand}"/>
                            </Label.GestureRecognizers>
                        </Label>

                        <BoxView 
						    Grid.Row="6" 
                            Grid.Column="1"
                            Grid.ColumnSpan="2"
						    BackgroundColor="White" 
						    Opacity="0.1"/>

                        <!--Arrival & Rules-->
                        <BoxView 
						    Grid.Row="7" 
						    Grid.Column="0" 
						    CornerRadius="13"
                            HeightRequest="26"
						    BackgroundColor="{Binding ArrivalAndRulesIconBg}"
                            VerticalOptions="CenterAndExpand">
                            <BoxView.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ArrivalAndRulesCommand}"/>
                            </BoxView.GestureRecognizers>
                        </BoxView>

                        <Label
						    Grid.Row="7"
						    Grid.Column="0"
						    FontFamily="{StaticResource MaterialFontFamily}"
						    FontSize="13"
						    HorizontalTextAlignment="Center"
						    Text="{x:Static fontawesome:QloudidAppFlatIcons.Check}"
						    TextColor="#242A37"
						    VerticalTextAlignment="Center"
                            IsVisible="{Binding IsArrivalAndRulesIconChecked}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ArrivalAndRulesCommand}"/>
                            </Label.GestureRecognizers>
                        </Label>

                        <Label
						    Grid.Row="7"
						    Grid.Column="0"
						    FontFamily="{StaticResource MaterialFontFamily}"
						    FontSize="13"
						    HorizontalTextAlignment="Center"
						    Text="{x:Static fontawesome:QloudidAppFlatIcons.BellOutline}"
						    TextColor="#242A37"
						    VerticalTextAlignment="Center"
                            IsVisible="{Binding IsArrivalAndRulesIconChecked, Converter={StaticResource InverseBoolConverter}}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ArrivalAndRulesCommand}"/>
                            </Label.GestureRecognizers>
                        </Label>

                        <Label
						    Grid.Row="7"
                            Grid.Column="1"
						    FontFamily="PoppinsRegularFontFamily"
						    FontSize="15"
						    Text="Arrival &amp; Rules"
						    TextColor="White" 
                            Opacity="0.60"
                            VerticalTextAlignment="Center"
						    HorizontalTextAlignment="Start">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ArrivalAndRulesCommand}"/>
                            </Label.GestureRecognizers>
                        </Label>

                        <Label
						    Grid.Row="7"
						    Grid.Column="2"
						    FontFamily="{StaticResource MaterialFontFamily}"
						    FontSize="25"
						    HorizontalTextAlignment="End"
						    Text="{x:Static fontawesome:QloudidAppFlatIcons.ChevronRight}"
						    TextColor="White"
						    VerticalTextAlignment="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ArrivalAndRulesCommand}"/>
                            </Label.GestureRecognizers>
                        </Label>

                        <BoxView 
						    Grid.Row="8" 
                            Grid.Column="1"
                            Grid.ColumnSpan="2"
						    BackgroundColor="White" 
						    Opacity="0.1"/>

                        <!--Photo, text & availability-->
                        <BoxView 
						    Grid.Row="9" 
						    Grid.Column="0" 
						    CornerRadius="13"
                            HeightRequest="26"
						    BackgroundColor="{Binding PhotoTextAndAvailabilityBg}"
                            VerticalOptions="CenterAndExpand">
                            <BoxView.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding PhotoTextAndAvailabilityCommand}"/>
                            </BoxView.GestureRecognizers>
                        </BoxView>

                        <Label
						    Grid.Row="9"
						    Grid.Column="0"
						    FontFamily="{StaticResource MaterialFontFamily}"
						    FontSize="13"
						    HorizontalTextAlignment="Center"
						    Text="{x:Static fontawesome:QloudidAppFlatIcons.Check}"
						    TextColor="#242A37"
						    VerticalTextAlignment="Center"
                            IsVisible="{Binding IsPhotoTextAndAvailability}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding PhotoTextAndAvailabilityCommand}"/>
                            </Label.GestureRecognizers>
                        </Label>

                        <Label
						    Grid.Row="9"
						    Grid.Column="0"
						    FontFamily="{StaticResource MaterialFontFamily}"
						    FontSize="13"
						    HorizontalTextAlignment="Center"
						    Text="{x:Static fontawesome:QloudidAppFlatIcons.BellOutline}"
						    TextColor="#242A37"
						    VerticalTextAlignment="Center"
                            IsVisible="{Binding IsPhotoTextAndAvailability, Converter={StaticResource InverseBoolConverter}}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding PhotoTextAndAvailabilityCommand}"/>
                            </Label.GestureRecognizers>
                        </Label>

                        <Label
						    Grid.Row="9"
                            Grid.Column="1"
						    FontFamily="PoppinsRegularFontFamily"
						    FontSize="15"
						    Text="Photo, text &amp; availability"
						    TextColor="White" 
                            Opacity="0.60"
                            VerticalTextAlignment="Center"
						    HorizontalTextAlignment="Start">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding PhotoTextAndAvailabilityCommand}"/>
                            </Label.GestureRecognizers>
                        </Label>

                        <Label
						    Grid.Row="9"
						    Grid.Column="2"
						    FontFamily="{StaticResource MaterialFontFamily}"
						    FontSize="25"
						    HorizontalTextAlignment="End"
						    Text="{x:Static fontawesome:QloudidAppFlatIcons.ChevronRight}"
						    TextColor="White"
						    VerticalTextAlignment="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding PhotoTextAndAvailabilityCommand}"/>
                            </Label.GestureRecognizers>
                        </Label>

                        <BoxView 
						    Grid.Row="10" 
                            Grid.Column="1"
                            Grid.ColumnSpan="2"
						    BackgroundColor="White" 
