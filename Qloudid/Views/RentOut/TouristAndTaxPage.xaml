<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Qloudid.Views.RentOut.TouristAndTaxPage"
    xmlns:fontawesome="clr-namespace:Qloudid.Helper"
	xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core" 
    xmlns:controls="clr-namespace:Qloudid.Controls"
    ios:Page.UseSafeArea="True"
	BackgroundColor="#1B1D24"
	NavigationPage.HasNavigationBar="False">
    <Grid RowSpacing="0" ColumnSpacing="0" Margin="0,22,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="53"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="1"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="57"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="65"/>
            <RowDefinition Height="2"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="28"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="28"/>
        </Grid.ColumnDefinitions>

        <Button 
            Grid.Row="0"
            Grid.Column="1"
            CornerRadius="8"
            BorderWidth="1"
            BorderColor="White"
            Opacity="0.1"
            Command="{Binding CloseCommand}"
            BackgroundColor="Transparent"/>

        <Label
			Grid.Row="0"
			Grid.Column="1"
			FontFamily="{StaticResource MaterialFontFamily}"
			FontSize="22"
			HorizontalTextAlignment="Center"
			Text="{x:Static fontawesome:QloudidAppFlatIcons.ChevronLeft}"
			TextColor="White"
			VerticalTextAlignment="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding CloseCommand}"/>
            </Label.GestureRecognizers>
        </Label>

        <Image
            Grid.Row="0"
            Grid.Column="3"
            Aspect="AspectFill"
            Source="iconThreePartColor.png"
            BackgroundColor="Transparent"/>

        <Label
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Grid.Row="2"
		    FontSize="33"
		    Text="Tourist tax"
		    TextColor="White"
            HorizontalTextAlignment="Start"
            FontFamily="PoppinsSemiBoldFontFamily"/>

        <Label
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Grid.Row="4"
	    	FontFamily="PoppinsRegularFontFamily"
	    	FontSize="16" LineHeight="1.1"
            HorizontalTextAlignment="Start"
	    	Text="Set your policy regarding if tourist tax for your property"
	    	TextColor="White"
            Opacity="0.42"/>

        <BoxView 
		    Grid.Column="1"
            Grid.ColumnSpan="3"
            Grid.Row="6"
		    BackgroundColor="White" 
		    Opacity="0.1"/>

        <Label
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Grid.Row="8"
		    FontSize="14"
		    Text="Is tourists tax applicable?"
		    TextColor="White"
            Opacity="0.7" 
            HorizontalTextAlignment="Start"
            FontFamily="PoppinsRegularFontFamily"/>

        <Frame 
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Grid.Row="10"
            Padding="0"
            CornerRadius="10"
            HasShadow="False"
            BorderColor="#2A2A31"
            BackgroundColor="Transparent"
            IsClippedToBounds="True">
            <Grid ColumnSpacing="0">
                <Label
                    Grid.Column="0"
		            FontSize="14"
		            Text="No"
		            TextColor="White"
                    Opacity="0.7" 
                    HorizontalTextAlignment="Center"
                    VerticalTextAlignment="Center"
                    BackgroundColor="{Binding TouristTaxNoBg}"
                    FontFamily="PoppinsMediumFontFamily">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding TouristTaxCommand}" CommandParameter="No"/>
                    </Label.GestureRecognizers>
                </Label>

                <Label
                    Grid.Column="1"
		            FontSize="14"
		            Text="Yes"
		            TextColor="White"
                    Opacity="0.7" 
                    BackgroundColor="{Binding TouristTaxYesBg}"
                    HorizontalTextAlignment="Center"
                    VerticalTextAlignment="Center"
                    FontFamily="PoppinsMediumFontFamily">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding TouristTaxCommand}" CommandParameter="Yes"/>
                    </Label.GestureRecognizers>
                </Label>
            </Grid>
        </Frame>

        <Grid 
            RowSpacing="8"
            ColumnSpacing="0"
            Margin="0,40,0,0"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Grid.Row="11"
            WidthRequest="135"
            HorizontalOptions="StartAndExpand"
            VerticalOptions="StartAndExpand"
            IsVisible="{Binding Address.TouristTaxApplicable}">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="55"/>
            </Grid.RowDefinitions>
            <Label
                Grid.Row="0"
		        FontSize="14"
		        Text="How much?"
		        TextColor="White"
                Opacity="0.7"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Start"
                FontFamily="PoppinsRegularFontFamily"/>

            <Frame 
                Grid.Row="1"
                Padding="12,0,12,0"
                CornerRadius="10"
                HasShadow="False"
                BackgroundColor="#2A2A31"
                IsClippedToBounds="True">
                <controls:CustomEntry 
                    FontSize="15"
                    TextColor="White"
                    Keyboard="Numeric"
                    MaxLength="4"
                    Placeholder="How much"
                    PlaceholderColor="Gray"
                    BackgroundColor="Transparent"
                    FontFamily="PoppinsRegularFontFamily"
                    Text="{Binding Address.TouristTax}"/>
            </Frame>
        </Grid>

        <Button 
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Grid.Row="12" 
            CornerRadius="30"
            Text="Submit"
            FontSize="16"
            TextColor="White"
            BackgroundColor="#F40000"
            Command="{Binding UpdateTouristTaxCommand}"
            FontFamily="PoppinsSemiBoldFontFamily"/>
    </Grid>
</ContentPage>