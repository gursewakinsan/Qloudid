			            Text="{x:Static fontawesome:QloudidAppFlatIcons.Check}"/>

                    <Button
                        Padding="0"
			            Grid.Row="2"
			            FontSize="25"
                        Grid.Column="0"
                        BorderWidth="1"
                        CornerRadius="12"
                        HeightRequest="44"
                        TextColor="#466285"
                        BorderColor="#242A37"
                        CommandParameter="4"
                        BackgroundColor="Transparent"
                        VerticalOptions="CenterAndExpand"
