                        FontFamily="{StaticResource MaterialFontFamily}"
			            Text="{x:Static fontawesome:QloudidAppFlatIcons.Check}"/>

                    <Button
                        Padding="0"
			            Grid.Row="4"
			            FontSize="25"
                        Grid.Column="0"
                        BorderWidth="1"
                        CornerRadius="12"
                        HeightRequest="44"
                        TextColor="#466285"
                        BorderColor="#242A37"
                        CommandParameter="6"
                        BackgroundColor="Transparent"
                        VerticalOptions="CenterAndExpand"
                        Command="{Binding UpdateChannelPublishCommand}"
                        FontFamily="{StaticResource MaterialFontFamily}"
			            Text="{x:Static fontawesome:QloudidAppFlatIcons.Check}"
                        IsVisible="{Binding Address.PublishBooking, Converter={StaticResource InverseBoolConverter}}"/>

                    <StackLayout
                        Grid.Row="4"
                        Spacing="0"
                        Grid.Column="1"
                        HorizontalOptions="StartAndExpand"
                        VerticalOptions="CenterAndExpand">
                        <Label
	    	                FontSize="15"
	    	                Text="Booking.com"
	    	                TextColor="White"
                            FontFamily="PoppinsRegularFontFamily">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding UpdateChannelPublishCommand}" CommandParameter="6"/>
                            </Label.GestureRecognizers>
                        </Label>

                        <Label
	    	                FontSize="12"
                            Opacity="0.42"
	    	                Text="+3 affiliate channels"
	    	                TextColor="White"
                            FontFamily="PoppinsRegularFontFamily">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding UpdateChannelPublishCommand}" CommandParameter="6"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>

                    <BoxView 
                        Grid.Row="5"
                        Opacity="0.1"
                        Grid.Column="1"
		                BackgroundColor="White" />

                    <!--Expedia-->
                    <Button
                        Padding="0"
			            Grid.Row="6"
			            FontSize="25"
                        Grid.Column="0"
                        CornerRadius="12"
                        HeightRequest="44"
                        TextColor="White"
                        CommandParameter="8"
                        BackgroundColor="#0F9D58"
                        VerticalOptions="CenterAndExpand"
                        IsVisible="{Binding Address.PublishExptd}"
                        Command="{Binding UpdateChannelPublishCommand}"
                        FontFamily="{StaticResource MaterialFontFamily}"
			            Text="{x:Static fontawesome:QloudidAppFlatIcons.Check}"/>

                    <Button
                        Padding="0"
			            Grid.Row="6"
			            FontSize="25"
                        Grid.Column="0"
                        BorderWidth="1"
                        CornerRadius="12"
                        HeightRequest="44"
                        TextColor="#466285"
                        BorderColor="#242A37"
                        CommandParameter="8"
                        BackgroundColor="Transparent"
                        VerticalOptions="CenterAndExpand"
                        Command="{Binding UpdateChannelPublishCommand}"
                        FontFamily="{StaticResource MaterialFontFamily}"
			            Text="{x:Static fontawesome:QloudidAppFlatIcons.Check}"
                        IsVisible="{Binding Address.PublishExptd, Converter={StaticResource InverseBoolConverter}}"/>

                    <StackLayout
                        Grid.Row="6"
                        Spacing="0"
                        Grid.Column="1"
                        HorizontalOptions="StartAndExpand"
                        VerticalOptions="CenterAndExpand">
                        <Label
	    	                FontSize="15"
	    	                Text="Expedia"
	    	                TextColor="White"
                            FontFamily="PoppinsRegularFontFamily">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding UpdateChannelPublishCommand}" CommandParameter="8"/>
                            </Label.GestureRecognizers>
                        </Label>

                        <Label
	    	                FontSize="12"
                            Opacity="0.42"
	    	                Text="+19 affiliate channels"
	    	                TextColor="White"
                            FontFamily="PoppinsRegularFontFamily">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding UpdateChannelPublishCommand}" CommandParameter="8"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>

                    <BoxView 
                        Grid.Row="7"
                        Opacity="0.1"
                        Grid.Column="1"
		                BackgroundColor="White" />

                    <!--VRBO-->
                    <Button
                        Padding="0"
			            Grid.Row="8"
			            FontSize="25"
                        Grid.Column="0"
                        CornerRadius="12"
                        HeightRequest="44"
                        TextColor="White"
                        CommandParameter="5"
                        BackgroundColor="#0F9D58"
                        VerticalOptions="CenterAndExpand"
                        IsVisible="{Binding Address.PublishVrbo}"
                        Command="{Binding UpdateChannelPublishCommand}"
                        FontFamily="{StaticResource MaterialFontFamily}"
			            Text="{x:Static fontawesome:QloudidAppFlatIcons.Check}"/>

                    <Button
                        Padding="0"
			            Grid.Row="8"
			            FontSize="25"
                        Grid.Column="0"
                        BorderWidth="1"
                        CornerRadius="12"
                        HeightRequest="44"
                        TextColor="#466285"
                        BorderColor="#242A37"
                        CommandParameter="5"
                        BackgroundColor="Transparent"
                        VerticalOptions="CenterAndExpand"
                        Command="{Binding UpdateChannelPublishCommand}"
                        FontFamily="{StaticResource MaterialFontFamily}"
			            Text="{x:Static fontawesome:QloudidAppFlatIcons.Check}"
                        IsVisible="{Binding Address.PublishVrbo, Converter={StaticResource InverseBoolConverter}}"/>

                    <StackLayout
                        Grid.Row="8"
                        Spacing="0"
                        Grid.Column="1"
                        HorizontalOptions="StartAndExpand"
                        VerticalOptions="CenterAndExpand">
                        <Label
	    	                FontSize="15"
	    	                Text="VRBO"
	    	                TextColor="White"
                            FontFamily="PoppinsRegularFontFamily">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding UpdateChannelPublishCommand}" CommandParameter="5"/>
                            </Label.GestureRecognizers>
                        </Label>

                        <Label
	    	                FontSize="12"
                            Opacity="0.42"
	    	                Text="+1 affiliate channels"
	    	                TextColor="White"
                            FontFamily="PoppinsRegularFontFamily">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding UpdateChannelPublishCommand}" CommandParameter="5"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>

                    <BoxView 
                        Grid.Row="9"
                        Opacity="0.1"
                        Grid.Column="1"
		                BackgroundColor="White" />

                    <!--Tripadvisor-->
                    <Button
                        Padding="0"
			            Grid.Row="10"
			            FontSize="25"
                        Grid.Column="0"
                        CornerRadius="12"
                        HeightRequest="44"
                        TextColor="White"
                        CommandParameter="8"
                        BackgroundColor="#0F9D58"
                        VerticalOptions="CenterAndExpand"
                        IsVisible="{Binding Address.PublishExptd}"
                        Command="{Binding UpdateChannelPublishCommand}"
                        FontFamily="{StaticResource MaterialFontFamily}"
			            Text="{x:Static fontawesome:QloudidAppFlatIcons.Check}"/>

                    <Button
                        Padding="0"
			            Grid.Row="10"
			            FontSize="25"
                        Grid.Column="0"
                        BorderWidth="1"
                        CornerRadius="12"
                        HeightRequest="44"
                        TextColor="#466285"
                        BorderColor="#242A37"
                        CommandParameter="8"
                        BackgroundColor="Transparent"
                        VerticalOptions="CenterAndExpand"
                        Command="{Binding UpdateChannelPublishCommand}"
                        FontFamily="{StaticResource MaterialFontFamily}"
			            Text="{x:Static fontawesome:QloudidAppFlatIcons.Check}"
                        IsVisible="{Binding Address.PublishExptd, Converter={StaticResource InverseBoolConverter}}"/>

                    <StackLayout
                        Grid.Row="10"
                        Spacing="0"
                        Grid.Column="1"
                        HorizontalOptions="StartAndExpand"
                        VerticalOptions="CenterAndExpand">
                        <Label
	    	                FontSize="15"
	    	                Text="Tripadvisor"
	    	                TextColor="White"
                            FontFamily="PoppinsRegularFontFamily">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding UpdateChannelPublishCommand}" CommandParameter="8"/>
                            </Label.GestureRecognizers>
                        </Label>

                        <Label
	    	                FontSize="12"
                            Opacity="0.42"
	    	                Text="+3 affiliate channels"
	    	                TextColor="White"
                            FontFamily="PoppinsRegularFontFamily">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding UpdateChannelPublishCommand}" CommandParameter="8"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>

                    <BoxView 
                        Grid.Row="11"
                        Opacity="0.1"
                        Grid.Column="1"
		                BackgroundColor="White" />

                    <!--TUI-->
                    <Button
                        Padding="0"
			            Grid.Row="12"
			            FontSize="25"
                        Grid.Column="0"
                        CornerRadius="12"
                        HeightRequest="44"
                        TextColor="White"
                        CommandParameter="9"
                        BackgroundColor="#0F9D58"
                        VerticalOptions="CenterAndExpand"
                        IsVisible="{Binding Address.PublishTui}"
                        Command="{Binding UpdateChannelPublishCommand}"
                        FontFamily="{StaticResource MaterialFontFamily}"
			            Text="{x:Static fontawesome:QloudidAppFlatIcons.Check}"/>

                    <Button
                        Padding="0"
			            Grid.Row="12"
			            FontSize="25"
                        Grid.Column="0"
                        BorderWidth="1"
                        CornerRadius="12"
                        HeightRequest="44"
                        TextColor="#466285"
                        BorderColor="#242A37"
                        CommandParameter="9"
                        BackgroundColor="Transparent"
                        VerticalOptions="CenterAndExpand"
                        Command="{Binding UpdateChannelPublishCommand}"
                        FontFamily="{StaticResource MaterialFontFamily}"
			            Text="{x:Static fontawesome:QloudidAppFlatIcons.Check}"
                        IsVisible="{Binding Address.PublishTui, Converter={StaticResource InverseBoolConverter}}"/>

                    <StackLayout
                        Grid.Row="12"
                        Spacing="0"
                        Grid.Column="1"
                        HorizontalOptions="StartAndExpand"
                        VerticalOptions="CenterAndExpand">
                        <Label
	    	                FontSize="15"
	    	                Text="TUI"
	    	                TextColor="White"
                            FontFamily="PoppinsRegularFontFamily">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding UpdateChannelPublishCommand}" CommandParameter="9"/>
                            </Label.GestureRecognizers>
                        </Label>

                        <Label
	    	                FontSize="12"
                            Opacity="0.42"
	    	                Text="+1 affiliate channels"
	    	                TextColor="White"
                            FontFamily="PoppinsRegularFontFamily">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding UpdateChannelPublishCommand}" CommandParameter="9"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>

                    <BoxView 
                        Grid.Row="13"
                        Opacity="0.1"
                        Grid.Column="1"
		                BackgroundColor="White" />
                </Grid>
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>