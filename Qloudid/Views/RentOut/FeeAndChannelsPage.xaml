                    <StackLayout
                        Grid.Row="2"
                        Spacing="0"
                        Grid.Column="1"
                        HorizontalOptions="StartAndExpand"
                        VerticalOptions="CenterAndExpand">
                        <Label
	    	                FontSize="15"
	    	                Text="Airbnb"
	    	                TextColor="White"
                            FontFamily="PoppinsRegularFontFamily">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding UpdateChannelPublishCommand}" CommandParameter="4"/>
                            </Label.GestureRecognizers>
                        </Label>

                        <Label
	    	                FontSize="12"
                            Opacity="0.42"
	    	                Text="Globally"
	    	                TextColor="White"
                            FontFamily="PoppinsRegularFontFamily">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding UpdateChannelPublishCommand}" CommandParameter="4"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>

                    <BoxView 
                        Grid.Row="3"
                        Opacity="0.1"
                        Grid.Column="1"
		                BackgroundColor="White" />

                    <!--Booking.com-->
                    <Button
                        Padding="0"
			            Grid.Row="4"
			            FontSize="25"
                        Grid.Column="0"
                        CornerRadius="12"
                        HeightRequest="44"
                        TextColor="White"
                        CommandParameter="6"
                        BackgroundColor="#0F9D58"
                        VerticalOptions="CenterAndExpand"
                        IsVisible="{Binding Address.PublishBooking}"
