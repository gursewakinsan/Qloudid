<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="Qloudid.Views.VerifyPasswordPage"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:controls="clr-namespace:Qloudid.Controls"
	xmlns:d="http://xamarin.com/schemas/2014/forms/design"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:usercontrols="clr-namespace:Qloudid.UserControls"
	Title="Qloudid"
	BackgroundColor="White"
	NavigationPage.HasNavigationBar="False"
	mc:Ignorable="d">
	<ScrollView VerticalScrollBarVisibility="Never">
		<StackLayout
			Padding="20"
			Spacing="0"
			VerticalOptions="CenterAndExpand">
			<Label
				FontFamily="{StaticResource SFProSemiboldFontFamily}"
				FontSize="24"
				HorizontalOptions="CenterAndExpand"
				Text="Connect"
				TextColor="Black" />

			<Label
				Margin="0,10,0,0"
				FontFamily="{StaticResource SFProRegularFontFamily}"
				FontSize="18"
				HorizontalOptions="CenterAndExpand"
				HorizontalTextAlignment="Center"
				Opacity="0.7"
				Text="Please enter password to verify."
				TextColor="Black" />

			<usercontrols:EntryPinView
				Margin="0,50,0,50"
				HorizontalOptions="CenterAndExpand"
				Pin="{Binding Password}" />

			<controls:CustomButton
				BackgroundColor="#05CBE7"
				Command="{Binding VerifyPasswordCommand}"
				FontFamily="{StaticResource SFProRegularFontFamily}"
				Text="Verify"
				TextColor="White"
				WidthRequest="200" />

			<controls:CustomButton
				Margin="0,20,0,0"
				BackgroundColor="Transparent"
				Command="{Binding CancelVerifyPasswordCommand}"
				FontFamily="{StaticResource SFProRegularFontFamily}"
				Text="Cancel"
				TextColor="#3623B7"
				WidthRequest="200" />
		</StackLayout>
	</ScrollView>
</ContentPage>