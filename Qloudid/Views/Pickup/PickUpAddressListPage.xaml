	ios:Page.UseSafeArea="True"
	BackgroundColor="#181A1F"
	NavigationPage.HasNavigationBar="False">
	<Grid
		Margin="0,22,0,5"
		ColumnSpacing="0"
		RowSpacing="0">
		<Grid.RowDefinitions>
			<RowDefinition Height="40" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="28" />
			<ColumnDefinition Width="40" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="40" />
			<ColumnDefinition Width="28" />
		</Grid.ColumnDefinitions>

		<Frame
			Grid.Row="0"
			Grid.Column="1"
			Padding="0"
			BackgroundColor="Transparent"
			BorderColor="White"
			CornerRadius="8"
			IsClippedToBounds="True"
			Opacity="0.2" />

		<Button
			Grid.Row="0"
			Grid.Column="1"
			Padding="0"
			BackgroundColor="Transparent"
			Command="{Binding CloseCommand}"
			FontFamily="{StaticResource MaterialFontFamily}"
			FontSize="25"
			Text="{x:Static fontawesome:QloudidAppFlatIcons.ChevronLeft}"
			TextColor="White" />

		<Image
			Grid.Row="0"
			Grid.Column="3"
			Aspect="AspectFit"
			BackgroundColor="Transparent"
			HeightRequest="40"
			HorizontalOptions="EndAndExpand"
			Source="iconSmallLogo.png"
			VerticalOptions="CenterAndExpand"
			WidthRequest="40" />

		<Grid
			Grid.Row="1"
			Grid.Column="1"
			Grid.ColumnSpan="3"
			Margin="0,31,0,0"
			ColumnSpacing="0"
			RowSpacing="0">
			<Grid.RowDefinitions>
				<RowDefinition Height="48" />
				<RowDefinition Height="8" />
				<RowDefinition Height="26" />
				<RowDefinition Height="8" />
				<RowDefinition Height="1" />
				<RowDefinition Height="41" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>

			<Label
				Grid.Row="0"
				FontAttributes="Bold"
				FontFamily="PoppinsBoldFontFamily"
				FontSize="40"
				HorizontalTextAlignment="Start"
				Text="Pick up"
				TextColor="White"
				VerticalTextAlignment="Center" />

			<Label
				Grid.Row="2"
				FontFamily="PoppinsRegularFontFamily"
				FontSize="16"
				HorizontalTextAlignment="Start"
				LineBreakMode="TailTruncation"
				MaxLines="1"
				Text="Select your preffered pick up location"
				TextColor="White"
				VerticalTextAlignment="Center" />

			<BoxView Grid.Row="4" BackgroundColor="#2A2A31" />


			<ListView
				x:Name="listPickupAddress"
				Grid.Row="6"
				BackgroundColor="#181A1F"
				HasUnevenRows="true"
				ItemTapped="OnPickupAddressItemTapped"
				ItemsSource="{Binding ListOfPickupAddressDetail}"
				SeparatorVisibility="None"
				VerticalOptions="FillAndExpand"
				VerticalScrollBarVisibility="Never">
				<ListView.ItemTemplate>
					<DataTemplate>
						<ViewCell>
							<Frame
								Margin="0,0,0,20"
								BackgroundColor="#242A37"
								BorderColor="#242A37"
								CornerRadius="8"
								IsClippedToBounds="True">
								<Grid ColumnSpacing="10">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="*" />
										<ColumnDefinition Width="32" />
									</Grid.ColumnDefinitions>
									<StackLayout
										Grid.Column="0"
										Spacing="1"
										VerticalOptions="CenterAndExpand">
										<Label
											FontFamily="PoppinsRegularFontFamily"
											FontSize="14"
											HorizontalTextAlignment="Start"
											LineBreakMode="TailTruncation"
											MaxLines="1"
											Text="{Binding PickupAddressName}"
											TextColor="White"
											VerticalTextAlignment="Center" />

										<Label
											FontFamily="PoppinsRegularFontFamily"
											FontSize="14"
											HorizontalTextAlignment="Start"
											LineBreakMode="TailTruncation"
											MaxLines="1"
											TextColor="White"
											VerticalTextAlignment="Center">
											<Label.FormattedText>
												<FormattedString>
													<Span Text="{Binding Address}" />
													<Span Text=" " />
													<Span Text="{Binding PortNumber}" />
												</FormattedString>
											</Label.FormattedText>
										</Label>

										<Label
											FontFamily="PoppinsRegularFontFamily"
											FontSize="14"
											HorizontalTextAlignment="Start"
											LineBreakMode="TailTruncation"
											MaxLines="1"
											TextColor="White"
											VerticalTextAlignment="Center">
											<Label.FormattedText>
												<FormattedString>
													<Span Text="{Binding City}" />
													<Span Text=" " />
													<Span Text="{Binding Zipcode}" />
													<Span Text=", " />
													<Span Text="{Binding CountryName}" />
												</FormattedString>
											</Label.FormattedText>
										</Label>
									</StackLayout>

									<Button
										Grid.Column="1"
										Padding="0"
										BackgroundColor="#4FD471"
										CornerRadius="16"
										FontFamily="{StaticResource MaterialFontFamily}"
										FontSize="22"
										HeightRequest="32"
										HorizontalOptions="CenterAndExpand"
										Text="{x:Static fontawesome:QloudidAppFlatIcons.ChevronRight}"
										TextColor="White"
										VerticalOptions="CenterAndExpand"
										WidthRequest="32" />
								</Grid>
							</Frame>
						</ViewCell>
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>

		</Grid>
	</Grid>



